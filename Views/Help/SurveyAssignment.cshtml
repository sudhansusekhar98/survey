@{
    ViewData["Title"] = "Team Assignment Guide";
}

@section PageStyles {
<style>
    .step-card {
        border-left: 4px solid #28a745;
        margin-bottom: 2rem;
        transition: all 0.3s ease;
    }

    .step-card:hover {
        box-shadow: 0 4px 12px rgba(40, 167, 69, 0.15);
        transform: translateX(5px);
    }

    .step-number {
        width: 50px;
        height: 50px;
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        border-radius: 50%;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 1.5rem;
        box-shadow: 0 4px 8px rgba(40, 167, 69, 0.3);
    }

    .screenshot-placeholder {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        border: 2px dashed #28a745;
        min-height: 350px;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 12px;
        margin: 1.5rem 0;
    }

    .tip-box {
        background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
        border-left: 5px solid #28a745;
        padding: 1.25rem;
        margin: 1.5rem 0;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(40, 167, 69, 0.1);
    }

    .warning-box {
        background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
        border-left: 5px solid #ffc107;
        padding: 1.25rem;
        margin: 1.5rem 0;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(255, 193, 7, 0.1);
    }

    .info-box {
        background: linear-gradient(135deg, #d1ecf1 0%, #bee5eb 100%);
        border-left: 5px solid #17a2b8;
        padding: 1.25rem;
        margin: 1.5rem 0;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(23, 162, 184, 0.1);
    }

    .btn-help {
        margin: 0.5rem;
        padding: 0.75rem 1.5rem;
    }

    .card-header-custom {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        padding: 1rem 1.5rem;
    }
</style>
}

<div class="container-fluid px-4 py-3">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-light px-3 py-2 rounded">
                    <li class="breadcrumb-item"><a asp-action="Index"><i class="bi bi-house-door me-1"></i>Help Center</a></li>
                    <li class="breadcrumb-item active">Team Assignment</li>
                </ol>
            </nav>
            <div class="card border-0 shadow-lg mb-4">
                <div class="card-header-custom">
                    <h2 class="mb-2">
                        <i class="bi bi-people-fill me-3"></i>Team Assignment Guide
                    </h2>
                    <p class="mb-0 lead">Learn how to assign team members to surveys and manage assignments</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Navigation -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body bg-light">
                    <h6 class="mb-3"><i class="bi bi-list-ul me-2"></i>Quick Navigation</h6>
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a href="#step1" class="btn btn-outline-success btn-sm w-100">→ Self Assignment</a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="#step2" class="btn btn-outline-success btn-sm w-100">→ Team Assignment</a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="#step3" class="btn btn-outline-success btn-sm w-100">→ Modify Assignments</a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a href="#step4" class="btn btn-outline-success btn-sm w-100">→ Remove Members</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Step 1: Self Assignment -->
    <div id="step1" class="row mb-4">
        <div class="col-12">
            <div class="card step-card shadow">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <span class="step-number me-4">1</span>
                        <h4 class="mb-0">Self Assignment - Work on Survey Yourself</h4>
                    </div>
                    
                    <h5 class="mt-4 mb-3"><i class="bi bi-person-check me-2"></i>When to Use Self Assignment</h5>
                    <p>Use self-assignment when you want to work on the survey independently without assigning a team.</p>
                    
                    <h5 class="mt-4 mb-3"><i class="bi bi-list-ol me-2"></i>Steps</h5>
                    <ol class="ps-4">
                        <li class="mb-3"><strong>Navigate to Survey:</strong> Go to <strong>Survey → All Surveys</strong></li>
                        <li class="mb-3"><strong>Click Locations:</strong> Find your survey and click the <strong>Locations</strong> button</li>
                        <li class="mb-3"><strong>Assignment Prompt:</strong> If no team is assigned, you'll see a modal with three options</li>
                        <li class="mb-3"><strong>Select "Start Survey Myself":</strong> Click the <strong>Start Survey Myself</strong> button</li>
                        <li class="mb-3"><strong>Confirmation:</strong> You'll be automatically assigned and can start adding locations</li>
                    </ol>

                    <div class="screenshot-placeholder">
                        <div class="text-center text-muted">
                            <i class="bi bi-image" style="font-size: 4rem; color: #28a745;"></i>
                            <p class="mt-3 mb-0"><strong>Screenshot: Self Assignment Modal</strong></p>
                            <small>Assignment prompt showing "Start Survey Myself" option</small>
                        </div>
                    </div>

                    <div class="tip-box">
                        <h6 class="mb-2"><i class="bi bi-lightbulb-fill text-success me-2"></i>Pro Tip</h6>
                        <p class="mb-0">After self-assignment, the survey status changes to <strong>"Assigned"</strong>. Once you add the first sub-location, it automatically changes to <strong>"In Progress"</strong>.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Step 2: Team Assignment -->
    <div id="step2" class="row mb-4">
        <div class="col-12">
            <div class="card step-card shadow">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <span class="step-number me-4">2</span>
                        <h4 class="mb-0">Assigning Multiple Team Members</h4>
                    </div>

                    <h5 class="mt-4 mb-3"><i class="bi bi-list-ol me-2"></i>Assignment Process</h5>
                    <ol class="ps-4">
                        <li class="mb-3">
                            <strong>Access Assignment Page:</strong>
                            <ul class="mt-2">
                                <li>From survey list, click <strong>Assign Team</strong> button, OR</li>
                                <li>From assignment prompt modal, click <strong>Assign Team Members</strong></li>
                            </ul>
                        </li>
                        <li class="mb-3">
                            <strong>Select Employees:</strong>
                            <ul class="mt-2">
                                <li>You'll see a list of all employees</li>
                                <li>Click checkboxes to select team members</li>
                                <li>Already assigned members show with a green checkmark</li>
                            </ul>
                        </li>
                        
                        <li class="mb-3">
                            <strong>Set Due Date:</strong>
                            <ul class="mt-2">
                                <li>Select a due date for the assignment</li>
                                <li>This helps track completion timelines</li>
                            </ul>
                        </li>

                        <li class="mb-3">
                            <strong>Save Assignments:</strong>
                            <ul class="mt-2">
                                <li>Click <strong>Save Assignments</strong> button</li>
                                <li>Confirmation message will appear</li>
                                <li>Survey status changes to <strong>"Assigned"</strong></li>
                            </ul>
                        </li>
                    </ol>

                    <div class="screenshot-placeholder">
                        <div class="text-center text-muted">
                            <i class="bi bi-image" style="font-size: 4rem; color: #28a745;"></i>
                            <p class="mt-3 mb-0"><strong>Screenshot: Team Assignment Page</strong></p>
                            <small>Employee selection with checkboxes and due date picker</small>
                        </div>
                    </div>

                    <div class="info-box">
                        <h6 class="mb-2"><i class="bi bi-info-circle-fill text-info me-2"></i>Important Information</h6>
                        <ul class="mb-0">
                            <li>You can assign multiple team members to the same survey</li>
                            <li>All assigned members can work on the survey simultaneously</li>
                            <li>Email notifications are sent to assigned team members (if configured)</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Step 3: Modify Assignments -->
    <div id="step3" class="row mb-4">
        <div class="col-12">
            <div class="card step-card shadow">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <span class="step-number me-4">3</span>
                        <h4 class="mb-0">Modifying Existing Assignments</h4>
                    </div>

                    <h5 class="mt-4 mb-3"><i class="bi bi-pencil-square me-2"></i>Add or Remove Team Members</h5>
                    <p>You can modify team assignments at any time, even after work has started.</p>

                    <h6 class="mt-4 mb-3">To Add New Members:</h6>
                    <ol class="ps-4">
                        <li class="mb-2">Go to survey list and click <strong>Assign Team</strong></li>
                        <li class="mb-2">Check additional employees you want to add</li>
                        <li class="mb-2">Click <strong>Save Assignments</strong></li>
                        <li class="mb-2">New members are added; existing members remain</li>
                    </ol>

                    <h6 class="mt-4 mb-3">To Remove Members:</h6>
                    <ol class="ps-4">
                        <li class="mb-2">Go to <strong>Assign Team</strong> page</li>
                        <li class="mb-2">Uncheck employees you want to remove</li>
                        <li class="mb-2">Click <strong>Save Assignments</strong></li>
                        <li class="mb-2">System removes unchecked members</li>
                    </ol>

                    <div class="warning-box">
                        <h6 class="mb-2"><i class="bi bi-exclamation-triangle-fill text-warning me-2"></i>Warning</h6>
                        <p class="mb-0">Removing a team member doesn't delete their work. All data they entered remains in the survey. Only the assignment link is removed.</p>
                    </div>

                    <div class="tip-box">
                        <h6 class="mb-2"><i class="bi bi-lightbulb-fill text-success me-2"></i>Best Practice</h6>
                        <p class="mb-0">Update the due date when adding new members to give them adequate time to complete their portion of the survey.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Step 4: Assignment Status -->
    <div id="step4" class="row mb-4">
        <div class="col-12">
            <div class="card step-card shadow">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center mb-4">
                        <span class="step-number me-4">4</span>
                        <h4 class="mb-0">Understanding Assignment Status Flow</h4>
                    </div>

                    <h5 class="mt-4 mb-3"><i class="bi bi-diagram-3 me-2"></i>Status Transitions</h5>
                    
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead class="table-success">
                                <tr>
                                    <th style="width: 25%;">Status</th>
                                    <th style="width: 40%;">When It Happens</th>
                                    <th style="width: 35%;">Next Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><span class="badge bg-secondary">Created</span></td>
                                    <td>Survey is created but no team assigned</td>
                                    <td>Assign yourself or team members</td>
                                </tr>
                                <tr>
                                    <td><span class="badge bg-warning text-dark">Assigned</span></td>
                                    <td>Team members assigned to survey</td>
                                    <td>Add sub-locations to start work</td>
                                </tr>
                                <tr>
                                    <td><span class="badge bg-primary">In Progress</span></td>
                                    <td>Sub-locations added, work started</td>
                                    <td>Complete survey data collection</td>
                                </tr>
                                <tr>
                                    <td><span class="badge bg-info text-dark">Submitted</span></td>
                                    <td>Survey submitted for approval</td>
                                    <td>Wait for approval/rejection</td>
                                </tr>
                                <tr>
                                    <td><span class="badge bg-success">Completed</span></td>
                                    <td>Survey approved by creator</td>
                                    <td>View reports and analytics</td>
                                </tr>
                                <tr>
                                    <td><span class="badge bg-danger">Rejected</span></td>
                                    <td>Survey rejected, needs correction</td>
                                    <td>Make corrections and resubmit</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>

                    <div class="info-box mt-4">
                        <h6 class="mb-2"><i class="bi bi-info-circle-fill text-info me-2"></i>Key Points</h6>
                        <ul class="mb-0">
                            <li><strong>Created → Assigned:</strong> Happens when team is assigned (self or multiple)</li>
                            <li><strong>Assigned → In Progress:</strong> Triggers when first sub-location is added</li>
                            <li><strong>In Progress → Submitted:</strong> User clicks "Submit for Approval"</li>
                            <li><strong>Submitted → Completed/Rejected:</strong> Survey creator reviews and decides</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Common Issues -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-warning shadow">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Common Issues & Solutions</h5>
                </div>
                <div class="card-body p-4">
                    <div class="accordion" id="issuesAccordion">
                        <div class="accordion-item mb-2">
                            <h2 class="accordion-header">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#issue1">
                                    Employee not showing in the list
                                </button>
                            </h2>
                            <div id="issue1" class="accordion-collapse collapse show" data-bs-parent="#issuesAccordion">
                                <div class="accordion-body">
                                    <strong>Solution:</strong> Make sure the employee record exists in <strong>Admin → Employee Master</strong>. Contact your administrator if the employee is missing.
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item mb-2">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#issue2">
                                    Cannot uncheck assigned members
                                </button>
                            </h2>
                            <div id="issue2" class="accordion-collapse collapse" data-bs-parent="#issuesAccordion">
                                <div class="accordion-body">
                                    <strong>Solution:</strong> All assigned members can be unchecked and removed. Simply uncheck their checkbox and click Save. The green checkmark indicates current assignment but doesn't prevent changes.
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item mb-2">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#issue3">
                                    Duplicate assignment error
                                </button>
                            </h2>
                            <div id="issue3" class="accordion-collapse collapse" data-bs-parent="#issuesAccordion">
                                <div class="accordion-body">
                                    <strong>Solution:</strong> The system prevents duplicate assignments automatically. If you see this error, refresh the page and try again. The employee may already be assigned.
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#issue4">
                                    Assignment not saving
                                </button>
                            </h2>
                            <div id="issue4" class="accordion-collapse collapse" data-bs-parent="#issuesAccordion">
                                <div class="accordion-body">
                                    <strong>Solutions:</strong>
                                    <ul class="mt-2 mb-0">
                                        <li>Ensure you have at least one employee selected</li>
                                        <li>Check that the due date is valid</li>
                                        <li>Verify you have permission to assign teams</li>
                                        <li>Try logging out and back in</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Related Topics -->
    <div class="row">
        <div class="col-12">
            <div class="card bg-light shadow-sm">
                <div class="card-body p-4">
                    <h5 class="mb-4"><i class="bi bi-link-45deg me-2"></i>Related Topics</h5>
                    <div class="row g-3">
                        <div class="col-md-3">
                            <a asp-action="SurveyCreation" class="btn btn-outline-success btn-help w-100">
                                <i class="bi bi-plus-circle me-2"></i>Creating Surveys
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="SurveyExecution" class="btn btn-outline-success btn-help w-100">
                                <i class="bi bi-list-check me-2"></i>Executing Surveys
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="AdminFunctions" class="btn btn-outline-success btn-help w-100">
                                <i class="bi bi-people me-2"></i>Employee Management
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-help w-100">
                                <i class="bi bi-arrow-left me-2"></i>Help Center
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
