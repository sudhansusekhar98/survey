@{
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
    ViewBag.Title = "Session Expired";
}

@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner mb-6">
            
            <div class="card shadow-lg rounded-4 pb-8 mb-6">
                <i class="bi bi-hourglass-split text-warning" style="font-size: 3.5rem;"></i>
                <h2 class="mt-3 text-warning">Session Timed Out</h2>
                <p class="lead">Your session has expired due to inactivity or timeout.</p>
                <a href="/UserLogin" class="btn btn-outline-warning mt-4 px-4 ms-2 me-2">
                    <i class="bi bi-box-arrow-in-right"></i> Login Again
                </a>
            </div>
           
        </div>
    </div>
</div>