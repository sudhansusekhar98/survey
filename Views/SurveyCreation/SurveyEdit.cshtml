@model SurveyApp.Models.SurveyModel
@{
    ViewData["Title"] = "Edit Survey";
}

<form asp-controller="SurveyCreation" asp-action="Edit" method="post" class="full-screen-card">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="SurveyId" />
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-10">
                <div class="card shadow mt-6">
                    <div class="card-header bg-purple py-2">
                        <div class="row">
                            <div class="col-6">
                                <h6 class="text-white fs-4 pt-1">
                                    Edit Survey - @(Model?.SurveyName ?? "...")
                                </h6>
                            </div>
                            <div class="col-6 text-end">
                                <a href="javascript:void(0);"
                                   class="btn btn-outline-danger text-white border-0 mx-0 my-0"
                                   onclick="showBackConfirmModal('@Url.Action("Index", "SurveyCreation")','Unsaved changes will be lost. Do you want to continue?')">
                                    <i class="bi bi-arrow-left-circle me-2"></i> Back To List
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row gx-4 gy-6">
                            <div class="col-12">
                                @if (TempData["ResultMessage"] != null && !string.IsNullOrWhiteSpace(TempData["ResultMessage"]?.ToString()))
                                {
                                    <div class="alert alert-@TempData["ResultType"] alert-dismissible fade show" role="alert">
                                        @Html.Raw(TempData["ResultMessage"])
                                        <button type="button" class="btn-close btn-sm align-top" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }
                            </div>

                            <!-- Client Selection -->
                            <div class="col-12">
                                <div class="form-custom-floating">
                                    <select asp-for="ClientID" id="clientDropdown" asp-items="@(ViewBag.Clients != null ? new SelectList(ViewBag.Clients, "Value", "Text", Model.ClientID) : new SelectList(Enumerable.Empty<SelectListItem>()))" class="form-select" placeholder=" ">
                                        <option value=""> </option>
                                    </select>
                                    <label asp-for="ClientID"></label>
                                    <span asp-validation-for="ClientID" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Client Information Section (Auto-filled) -->
                            <div class="col-12">
                                <div class="card border-info mt-1">
                                    <div class="card-header bg-info bg-opacity-10 border-bottom border-info mb-3"
                                         style="padding-top: 10px; padding-bottom: 10px;">
                                        <h6 class="mb-0 text-info">
                                            <i class="bi bi-building me-2"></i>Client Information
                                        </h6>
                                    </div>
                                    <div class="card-body mt-1">
                                        <div class="row g-3">
                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <input asp-for="AgencyName" type="text" class="form-control" placeholder=" " id="agencyNameInput" readonly>
                                                    <label asp-for="AgencyName"></label>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <input asp-for="LocationSiteName" type="text" class="form-control" placeholder=" " id="addressInput" readonly>
                                                    <label asp-for="LocationSiteName"></label>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <input asp-for="SurveyTeamName" type="text" class="form-control" placeholder=" " id="contactPersonInput" readonly>
                                                    <label asp-for="SurveyTeamName">Contact Person</label>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <input asp-for="SurveyTeamContact" type="text" class="form-control" placeholder=" " id="contactNumberInput" readonly>
                                                    <label asp-for="SurveyTeamContact">Contact Number</label>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    @* <input type="text" class="form-control" placeholder=" " id="stateInput" readonly>
                                                    <label>State</label> *@

                                                    <input asp-for="MapMarking" type="text" class="form-control" placeholder=" " id="State" readonly>
                                                    <label asp-for="MapMarking">State</label>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    @* <input type="text" class="form-control" placeholder=" " id="cityInput" readonly>
                                                    <label>City</label> *@

                                                    <input asp-for="CityDistrict" type="text" class="form-control" placeholder=" " id="City" readonly>
                                                    <label asp-for="CityDistrict">City</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Survey Details Section -->
                            <div class="col-12">
                                <div class="card border-purple mt-1">
                                    <div class="card-header bg-purple border-bottom border-purple mb-2"
                                        style="padding-top: 10px; padding-bottom: 10px;">
                                        <h6 class="mb-0 text-white">
                                            <i class="bi bi-clipboard-data me-2"></i>Survey Details
                                        </h6>
                                    </div>

                                    <div class="card-body">
                                        <div class="row g-3 mt-1">
                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <input asp-for="SurveyName" type="text" class="form-control" placeholder=" " required>
                                                    <label asp-for="SurveyName"></label>
                                                    <span asp-validation-for="SurveyName" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <select asp-for="RegionID" asp-items="@(ViewBag.Regions as SelectList)" class="form-select" placeholder=" ">
                                                        <option value=""> </option>
                                                    </select>
                                                    <label asp-for="RegionID"></label>
                                                    <span asp-validation-for="RegionID" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <select asp-for="ImplementationType" asp-items="Model.ImplementationTypeOptions" class="form-select" placeholder=" ">
                                                        <option value=""> </option>
                                                    </select>
                                                    <label asp-for="ImplementationType"></label>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <input asp-for="SurveyDate" type="date" class="form-control" placeholder=" ">
                                                    <label asp-for="SurveyDate"></label>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <input asp-for="SurveyTeamName" type="text" class="form-control" placeholder=" ">
                                                    <label asp-for="SurveyTeamName"></label>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <input asp-for="SurveyTeamContact" type="text" class="form-control" placeholder=" " maxlength="15">
                                                    <label asp-for="SurveyTeamContact"></label>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="form-custom-floating">
                                                    <textarea asp-for="ScopeOfWork" class="form-control" placeholder=" " rows="3" style="min-height: 100px;"></textarea>
                                                    <label asp-for="ScopeOfWork"></label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <input type="hidden" asp-for="StateId" id="stateIdHidden" />
                            <input type="hidden" asp-for="MapMarking" id="stateNameHidden" />
                            <input type="hidden" asp-for="CityId" id="cityIdHidden" />
                            <input type="hidden" asp-for="CityDistrict" id="cityNameHidden" />
                        </div>
                    </div>

                    <div class="card-footer mt-4">
                        <div class="row">
                            <div class="col text-end">
                                <button type="submit" class="btn btn-primary me-2"><i class="bi bi-check2-circle me-2"></i> Update</button>
                                <a asp-controller="SurveyCreation" asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-circle me-2"></i> Cancel</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Handle client selection
            $('#clientDropdown').change(function() {
                var clientId = $(this).val();
                
                if (clientId) {
                    $.ajax({
                        url: '@Url.Action("GetClientDetails", "SurveyCreation")',
                        type: 'GET',
                        data: { clientId: clientId },
                        success: function(response) {
                            if (response.success) {
                                applyClientDetails(response.data);
                            } else {
                                alert('Error loading client details: ' + response.message);
                            }
                        },
                        error: function() {
                            alert('Failed to load client details. Please try again.');
                        }
                    });
                } else {
                    clearClientFields();
                }
            });

            // If a client is already associated, populate the fields on load.
            var initialClientId = @(Model.ClientID ?? 0);
            if (initialClientId > 0) {
                // Set the dropdown value
                $('#clientDropdown').val(initialClientId);
                
                // Populate the readonly fields with the model's current data
                var initialClientData = {
                    clientName: '@Model.AgencyName',
                    address: '@Model.LocationSiteName',
                    contactPerson: '@Model.SurveyTeamName',
                    contactNumber: '@Model.SurveyTeamContact',
                    stateId: @(Model.StateId.HasValue ? Model.StateId.Value.ToString() : "null"),
                    stateName: '@Model.MapMarking',
                    cityId: @(Model.CityId.HasValue ? Model.CityId.Value.ToString() : "null"),
                    cityName: '@Model.CityDistrict'
                };
                applyClientDetails(initialClientData);
            }
        });

        function applyClientDetails(client) {
            // Populate readonly fields
            $('#agencyNameInput').val(client.clientName || '');
            $('#addressInput').val(client.address || '');
            $('#contactPersonInput').val(client.contactPerson || '');
            $('#contactNumberInput').val(client.contactNumber || '');
            $('#stateInput').val(client.stateName || '');
            $('#cityInput').val(client.cityName || '');
            
            // Populate hidden fields for form submission
            $('#stateIdHidden').val(client.stateId || '');
            $('#stateNameHidden').val(client.stateName || '');
            $('#cityIdHidden').val(client.cityId || '');
            $('#cityNameHidden').val(client.cityName || '');
        }

        function clearClientFields() {
            $('#agencyNameInput, #addressInput, #contactPersonInput, #contactNumberInput, #stateInput, #cityInput').val('');
            $('#stateIdHidden, #stateNameHidden, #cityIdHidden, #cityNameHidden').val('');
        }

        function showBackConfirmModal(url, message) {
            let modal = document.getElementById("backConfirmModal");

            if (message) {
                modal.querySelector(".modal-body").innerText = message;
            }

            // set URL on continue button
            document.getElementById("confirmContinueBtn").setAttribute("href", url);

            // show modal
            var myModal = new bootstrap.Modal(modal, {
                backdrop: 'static',
                keyboard: false
            });
            myModal.show();
        }
    </script>
}
