@model SurveyApp.Models.AssignedItemsModel
@{
    ViewData["Title"] = "Device Type Master";
}

@section PageStyles {
    <style>
        /* Prevent horizontal overflow */
        body {
            overflow-x: hidden !important;
        }
        
        /* Mobile full-screen card */
        @@media (max-width: 767.98px) {
            .full-screen-card {
                min-height: 100vh;
                border-radius: 0 !important;
                margin: 0 !important;
            }
        }
    </style>
}

<form asp-controller="SurveyCreation" asp-action="SaveItemType" method="post">
    @Html.AntiForgeryToken()
    <div class="container-fluid p-0 m-0">
        <div class="row g-0">
            <div class="col-12">
                <div class="card shadow mt-0 rounded-0 full-screen-card">
                    <div class="card-header bg-purple py-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="text-white fs-4 mb-0">
                                Select Device Types
                            </h6>
                            <a href="@Url.Action("Index", "SurveyCreation")"
                               class="btn btn-outline-danger text-white border-0">
                                <i class="bi bi-arrow-left-circle"></i>
                                <span class="d-none d-md-inline ms-2">Back To List</span>
                            </a>
                        </div>
                    </div>
                    <div class="card-body p-3 p-md-4">
                        <div class="mb-3">
                            <span class="badge bg-purple me-2">Survey ID: @Model.SurveyId</span>
                            <span class="badge bg-secondary">Location ID: @Model.LocID</span>
                        </div>
                        <div class="row gx-4 gy-6">
                            <input type="hidden" asp-for="SurveyId" />
                            <input type="hidden" asp-for="LocID" />
                            @* <input type="hidden" asp-for="SurveyName" /> *@

                            @if (Model.AssignItemList != null && Model.AssignItemList.Count > 0)
                            {
                                for (int i = 0; i < Model.AssignItemList.Count; i++)
                                {

                                    <div class="col-12 col-md-6 col-lg-4 mb-4">
                                        <div class="form-custom-floating p-3 shadow-sm rounded h-100 d-flex flex-column justify-content-between assign-card" role="button" tabindex="0">
                                            <div class="d-flex align-items-center mb-2">
                                                <i class="bi bi-cpu fs-2 text-primary me-3"></i>
                                                <span class="fw-semibold fs-5">@Model.AssignItemList[i].TypeName</span>
                                            </div>

                                            <div class="mb-2 text-muted small">@Model.AssignItemList[i].TypeDesc</div>
                                            <div class="mb-2">
                                                <span class="badge bg-info">@Model.AssignItemList[i].GroupName</span>
                                            </div>

                                            <div class="form-check ps-0">
                                                <label class="switch switch-text switch-primary switch-pill">
                                                    <input type="checkbox" class="switch-input" asp-for="AssignItemList[i].IsAssigned" />
                                                    <span data-on="Yes" data-off="NO" class="switch-label"></span>
                                                    <span class="switch-handle"></span>
                                                </label>
                                            </div>

                                            <input type="hidden" asp-for="AssignItemList[i].ItemTypeID" />
                                        </div>
                                    </div>

                                }
                            }
                            else
                            {
                                <div>No items found.</div>
                            }
                        </div>
                    </div>
                    <div class="card-footer mt-4">
                        <div class="d-flex flex-column flex-sm-row gap-2 justify-content-end">
                            <button type="submit" class="btn btn-primary order-1 order-sm-0" name="action" value="save">
                                <i class="bi bi-check2-circle me-2"></i> Save Selection
                            </button>
                            <a asp-controller="SurveyCreation" asp-action="SaveItemType" class="btn btn-danger order-2 order-sm-1">
                                <i class="bi bi-slash-circle me-2"></i> Reset
                            </a>
                            <button type="submit" class="btn btn-success order-0 order-sm-2" name="action" value="start">
                                <i class="bi bi-play-circle me-2"></i> Start Survey
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function () {
        function updateVisual(card, checked) {
            if (checked) card.classList.add('selected');
            else card.classList.remove('selected');
            // also set aria-checked for accessibility
            card.setAttribute('aria-checked', checked ? 'true' : 'false');
        }

        document.querySelectorAll('.assign-card').forEach(function(card) {
            var checkbox = card.querySelector('input[type="checkbox"]');

            if (!checkbox) return;

            // initialize visual state from checkbox value
            updateVisual(card, checkbox.checked);

            // clicking the card toggles the checkbox
            card.addEventListener('click', function(e) {
                // ignore clicks on interactive elements inside card if any (optional)
                var target = e.target;
                if (target.tagName === 'A' || target.tagName === 'BUTTON' || target.tagName === 'INPUT' || target.closest('a, button, input')) {
                    return; // let native handlers run
                }
                checkbox.checked = !checkbox.checked;
                // trigger change so any listeners and model binding pick it up
                checkbox.dispatchEvent(new Event('change', { bubbles: true }));
                updateVisual(card, checkbox.checked);
            });

            // stop card click from double toggling when clicking the checkbox itself
            checkbox.addEventListener('click', function(e) {
                e.stopPropagation();
            });

            // when checkbox changes (keyboard toggle etc.), update visual class
            checkbox.addEventListener('change', function() {
                updateVisual(card, checkbox.checked);
            });

            // also allow keyboard toggling via Enter/Space on the card
            card.addEventListener('keydown', function(e) {
                if (e.key === 'Enter' || e.key === ' ') {
                    e.preventDefault();
                    checkbox.checked = !checkbox.checked;
                    checkbox.dispatchEvent(new Event('change', { bubbles: true }));
                    updateVisual(card, checkbox.checked);
                }
            });
        });
    });
</script>
}

