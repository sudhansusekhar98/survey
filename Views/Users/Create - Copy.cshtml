@model AnalyticaDocs.Models.UserModel
@{
    ViewData["Title"] = "Add New User";
}
<form asp-controller="Users" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
<div class="card">
    <div class="card-header bg-purple mb-8 py-2">
        <h6 class="text-white fs-4 pt-1">
            Add New Users
        </h6>

    </div>
    <div class="card-body">

            <div class="row gx-3 gy-5">
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-custom-floating">
                        <input asp-for="UserId" type="number" class="form-control bg-label-secondary" placeholder="" readonly />
                        <label asp-for="UserId" class="bg-label-secondary"></label>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-custom-floating">
                        <input asp-for="LoginId" type="text" class="form-control" placeholder="">
                        <label asp-for="LoginId"></label>
                    </div>
                </div>
                
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-custom-floating">
                        <input asp-for="LoginPassword" type="text" class="form-control" placeholder="">
                        <label asp-for="LoginPassword"></label>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-custom-floating">
                        <input asp-for="RoleId" type="text" class="form-control bg-label-secondary" placeholder="" readonly>
                        <label for="Role" class=""> Role </label>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-custom-floating">
                        <input asp-for="LoginName" type="text" class="form-control" placeholder="">
                        <label asp-for="LoginName"></label>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-custom-floating">
                        <input asp-for="MobileNo" type="text" class="form-control" placeholder="">
                        <label asp-for="MobileNo"></label>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-custom-floating">
                        <input asp-for="EmailID" type="text" class="form-control" placeholder="">
                        <label asp-for="EmailID"></label>
                    </div>
                </div>
                <div class="col-12 col-md-6 col-lg-3">
                    <div class="form-custom-floating">
                        <select asp-for="ISActive" asp-items="Model.StatusOptions" class="form-control"></select>
                        <label asp-for="ISActive"></label>
                    </div>
                </div>
            </div>

          

    </div>
    <div class="card-footer mt-12">
        <div class="row">
            <div class="col text-end">
                    <button type="submit" class="btn btn-primary me-2"><i class="bi bi-check2-circle me-2"></i> Submit</button>
                    <a asp-controller="Users" asp-action="Create" class="btn btn-danger"><i class="bi bi-slash-circle me-2"></i> Reset</a>
            </div>
        </div>
    </div>
</div>
</form>