@model SurveyApp.Models.EmpMasterModel

<div class="modal-header bg-purple text-white">
    <h5 class="modal-title">
        <i class="bi bi-person-badge me-2"></i>Employee Details
    </h5>
    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-md-6 mb-3">
            <strong class="text-muted d-block mb-1">Employee Code:</strong>
            <p class="mb-0">@Model.EmpCode</p>
        </div>
        <div class="col-md-6 mb-3">
            <strong class="text-muted d-block mb-1">Employee Name:</strong>
            <p class="mb-0">@Model.EmpName</p>
        </div>
        <div class="col-md-6 mb-3">
            <strong class="text-muted d-block mb-1">Gender:</strong>
            <p class="mb-0">@(Model.Gender ?? "-")</p>
        </div>
        <div class="col-md-6 mb-3">
            <strong class="text-muted d-block mb-1">Date of Birth:</strong>
            <p class="mb-0">@(Model.DateOfBirth?.ToString("dd-MMM-yyyy") ?? "-")</p>
        </div>
    </div>

    <hr />
    <h6 class="text-info"><i class="bi bi-telephone me-2"></i>Contact Information</h6>
    <div class="row">
        <div class="col-md-6 mb-3">
            <strong class="text-muted d-block mb-1">Mobile No:</strong>
            <p class="mb-0">@(Model.MobileNo ?? "-")</p>
        </div>
        <div class="col-md-6 mb-3">
            <strong class="text-muted d-block mb-1">Email:</strong>
            <p class="mb-0">@(Model.Email ?? "-")</p>
        </div>
        <div class="col-12 mb-3">
            <strong class="text-muted d-block mb-1">Address:</strong>
            <p class="mb-0">
                @if (!string.IsNullOrEmpty(Model.AddressLine1) || !string.IsNullOrEmpty(Model.AddressLine2))
                {
                    @Model.AddressLine1
                    @if (!string.IsNullOrEmpty(Model.AddressLine2))
                    {
                        <br />@Model.AddressLine2
                    }
                    <br />
                    @Model.City@((!string.IsNullOrEmpty(Model.City) && !string.IsNullOrEmpty(Model.State)) ? ", " : "")@Model.State
                    @if (!string.IsNullOrEmpty(Model.PinCode))
                    {
                        <text> - </text>@Model.PinCode
                    }
                    @if (!string.IsNullOrEmpty(Model.Country))
                    {
                        <br />@Model.Country
                    }
                }
                else
                {
                    <text>-</text>
                }
            </p>
        </div>
    </div>

    <hr />
    <h6 class="text-warning"><i class="bi bi-briefcase me-2"></i>Employment Details</h6>
    <div class="row">
        <div class="col-md-6 mb-3">
            <strong class="text-muted d-block mb-1">Designation:</strong>
            <p class="mb-0">@(Model.Designation ?? "-")</p>
        </div>
        <div class="col-md-6 mb-3">
            <strong class="text-muted d-block mb-1">Department ID:</strong>
            <p class="mb-0">@(Model.DeptID?.ToString() ?? "-")</p>
        </div>
        <div class="col-md-6 mb-3">
            <strong class="text-muted d-block mb-1">Employment Type:</strong>
            <p class="mb-0">@(Model.EmploymentType ?? "-")</p>
        </div>
        <div class="col-md-6 mb-3">
            <strong class="text-muted d-block mb-1">Date of Joining:</strong>
            <p class="mb-0">@(Model.DateOfJoining?.ToString("dd-MMM-yyyy") ?? "-")</p>
        </div>
        @if (Model.DateOfLeaving.HasValue)
        {
            <div class="col-md-6 mb-3">
                <strong class="text-muted d-block mb-1">Date of Leaving:</strong>
                <p class="mb-0">@Model.DateOfLeaving.Value.ToString("dd-MMM-yyyy")</p>
            </div>
        }
        <div class="col-md-6 mb-3">
            <strong class="text-muted d-block mb-1">Status:</strong>
            <p class="mb-0">
                @if (Model.IsActive)
                {
                    <span class="badge bg-success">Active</span>
                }
                else
                {
                    <span class="badge bg-secondary">Inactive</span>
                }
            </p>
        </div>
    </div>

    @if (Model.CreatedOn.HasValue || !string.IsNullOrEmpty(Model.CreatedBy))
    {
        <hr />
        <div class="row">
            @if (!string.IsNullOrEmpty(Model.CreatedBy))
            {
                <div class="col-md-6 mb-2">
                    <small class="text-muted">Created By: @Model.CreatedBy</small>
                </div>
            }
            @if (Model.CreatedOn.HasValue)
            {
                <div class="col-md-6 mb-2">
                    <small class="text-muted">Created On: @Model.CreatedOn.Value.ToString("dd-MMM-yyyy HH:mm")</small>
                </div>
            }
            @if (!string.IsNullOrEmpty(Model.ModifiedBy))
            {
                <div class="col-md-6 mb-2">
                    <small class="text-muted">Modified By: @Model.ModifiedBy</small>
                </div>
            }
            @if (Model.ModifiedDate.HasValue)
            {
                <div class="col-md-6 mb-2">
                    <small class="text-muted">Modified On: @Model.ModifiedDate.Value.ToString("dd-MMM-yyyy HH:mm")</small>
                </div>
            }
        </div>
    }
</div>
<div class="modal-footer">
    <a asp-action="Edit" asp-route-id="@Model.EmpID" class="btn btn-warning">
        <i class="bi bi-pencil me-1"></i>Edit
    </a>
    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
</div>

<style>
    .bg-purple {
        background-color: #667eea !important;
    }
</style>
