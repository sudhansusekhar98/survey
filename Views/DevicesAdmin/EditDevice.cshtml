@model SurveyApp.Models.DeviceViewModel
@{
    ViewData["Title"] = "Edit Device";
    var returnModuleId = ViewBag.ReturnModuleId as int?;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                @* <div class="card-header bg-purple text-white">
                    <h4 class="mb-0">Edit Device</h4>
                </div> *@
                <div class="card-header bg-purple custom-header mb-3 d-flex align-items-center">
                <h6 class="text-white mb-0 flex-grow-1">
                    Edit Device
                </h6>
            </div>
                <div class="card-body">
                    @if (TempData["ResultMessage"] != null)
                    {
                        <div class="alert alert-@TempData["ResultType"] alert-dismissible fade show" role="alert">
                            @Html.Raw(TempData["ResultMessage"])
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-action="EditDevice" method="post">
                        @Html.AntiForgeryToken()
                        <input asp-for="ItemId" type="hidden" />
                        
                        <div class="mb-3">
                            <label asp-for="ModuleId" class="form-label"></label>
                            <select asp-for="ModuleId" class="form-select" asp-items="ViewBag.DeviceModules">
                                <option value="">-- Select Module --</option>
                            </select>
                            <span asp-validation-for="ModuleId" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Code" class="form-label"></label>
                            <input asp-for="Code" class="form-control" />
                            <span asp-validation-for="Code" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="UOM" class="form-label"></label>
                            <select asp-for="UOM" class="form-select">
                                <option value="">-- Select UOM --</option>
                                <option value="NUM">NUM</option>
                                <option value="MTR">MTR</option>
                            </select>
                            <span asp-validation-for="UOM" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="SequenceNo" class="form-label"></label>
                            <input asp-for="SequenceNo" class="form-control" type="number" />
                            <span asp-validation-for="SequenceNo" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                            <label asp-for="IsActive" class="form-check-label"></label>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            @if (returnModuleId.HasValue && returnModuleId.Value > 0)
                            {
                                <a href="@Url.Action("ModuleDevices", new { id = returnModuleId.Value })" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Manage")" class="btn btn-secondary">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                            }
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save"></i> Update
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
