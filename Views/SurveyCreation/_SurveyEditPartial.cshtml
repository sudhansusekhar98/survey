@model SurveyApp.Models.SurveyModel

<form asp-action="Edit" asp-controller="SurveyCreation" method="post" class="p-3">
    @Html.AntiForgeryToken()
    <div class="modal-header">
        <h5 class="modal-title">Edit Survey - @Model.SurveyName</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
    </div>

    <div class="modal-body">
        <input type="hidden" asp-for="SurveyId" />

        <div class="mb-3">
            <label asp-for="SurveyName" class="form-label"></label>
            <input asp-for="SurveyName" class="form-control" />
            <span asp-validation-for="SurveyName" class="text-danger"></span>
        </div>

        <!-- add other form fields same as your SurveyEdit.cshtml -->
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </div>
</form>
