    <!-- Survey List Table -->
    <div class="card shadow-sm border-0" style="border-radius: 12px; overflow: hidden;">
        <div class="card-header bg-purple py-3">
            <h6 class="mb-0 text-white fw-bold">
                <i class="bi bi-table me-2"></i>Survey Details
                <span class="badge bg-white text-purple ms-2">@Model.Surveys.Count surveys</span>
            </h6>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover datatables-basic mb-0">
                    <thead style="background-color: #f8f9fa;">
                        <tr>
                            <th class="fw-semibold">Survey ID</th>
                            <th class="fw-semibold">Survey Name</th>
                            <th class="fw-semibold">Status</th>
                            <th class="fw-semibold">Region</th>
                            <th class="fw-semibold">Type</th>
                            <th class="fw-semibold">Date</th>
                            <th class="fw-semibold">Due Date</th>
                            <th class="fw-semibold no-print">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var survey in Model.Surveys)
                        {
                            var statusClass = survey.SurveyStatus switch
                            {
                                "Completed" => "success",
                                "In Progress" => "warning",
                                "Pending" => "secondary",
                                "On Hold" => "danger",
                                _ => "dark"
                            };
                            var isOverdue = survey.DueDate.HasValue && survey.DueDate.Value < DateTime.Now && survey.SurveyStatus != "Completed";

                            <tr>
                                <td class="fw-semibold text-purple">#@survey.SurveyId</td>
                                <td>@survey.SurveyName</td>
                                <td>
                                    <span class="badge bg-@statusClass rounded-pill px-3">
                                        @survey.SurveyStatus
                                    </span>
                                </td>
                                <td>
                                    <i class="bi bi-geo-alt text-muted me-1"></i>@survey.RegionName
                                </td>
                                <td>@survey.ImplementationType</td>
                                <td>@(survey.SurveyDate?.ToString("dd-MMM-yyyy") ?? "-")</td>
                                <td>
                                    @if (survey.DueDate.HasValue)
                                    {
                                        <span class="@(isOverdue ? "text-danger fw-bold" : "")">
                                            @survey.DueDate.Value.ToString("dd-MMM-yyyy")
                                            @if (isOverdue)
                                            {
                                                <i class="bi bi-exclamation-triangle-fill ms-1"></i>
                                            }
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td class="no-print">
                                    <a asp-action="DetailedReport" asp-route-surveyId="@survey.SurveyId" 
                                       class="btn btn-sm btn-purple rounded-pill px-3">
                                        <i class="bi bi-eye-fill me-1"></i>View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Modern Chart.js configuration with better styling
        Chart.defaults.font.family = "'Segoe UI', 'Roboto', sans-serif";
        
        // Status Chart
        @if (Model.SurveysByStatus.Any())
        {
            <text>
            const statusCtx = document.getElementById('statusChart').getContext('2d');
            new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.SurveysByStatus.Keys)),
                    datasets: [{
                        data: @Html.Raw(Json.Serialize(Model.SurveysByStatus.Values)),
                        backgroundColor: [
                            'rgba(6, 214, 160, 0.9)',
                            'rgba(255, 201, 60, 0.9)',
                            'rgba(108, 117, 125, 0.9)',
                            'rgba(255, 107, 107, 0.9)',
                            'rgba(102, 126, 234, 0.9)'
                        ],
                        borderWidth: 0,
                        hoverOffset: 10
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: { 
                            position: 'bottom',
                            labels: {
                                padding: 15,
                                usePointStyle: true,
                                font: { size: 12 }
                            }
                        },
                        tooltip: {
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            padding: 12,
                            titleFont: { size: 14 },
                            bodyFont: { size: 13 }
                        }
                    }
                }
            });
            </text>
        }

        // Region Chart
        @if (Model.SurveysByRegion.Any())
        {
            <text>
            const regionCtx = document.getElementById('regionChart').getContext('2d');
            new Chart(regionCtx, {
                type: 'pie',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.SurveysByRegion.Keys)),
                    datasets: [{
                        data: @Html.Raw(Json.Serialize(Model.SurveysByRegion.Values)),
                        backgroundColor: [
                            'rgba(102, 126, 234, 0.9)',
                            'rgba(118, 75, 162, 0.9)',
                            'rgba(240, 147, 251, 0.9)',
                            'rgba(79, 172, 254, 0.9)',
                            'rgba(0, 242, 254, 0.9)'
                        ],
                        borderWidth: 0,
                        hoverOffset: 10
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: { 
                            position: 'bottom',
                            labels: {
                                padding: 15,
                                usePointStyle: true,
                                font: { size: 12 }
                            }
                        },
                        tooltip: {
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            padding: 12,
                            titleFont: { size: 14 },
                            bodyFont: { size: 13 }
                        }
                    }
                }
            });
            </text>
        }

        // Type Chart
        @if (Model.SurveysByImplementationType.Any())
        {
            <text>
            const typeCtx = document.getElementById('typeChart').getContext('2d');
            new Chart(typeCtx, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.SurveysByImplementationType.Keys)),
                    datasets: [{
                        label: 'Surveys',
                        data: @Html.Raw(Json.Serialize(Model.SurveysByImplementationType.Values)),
                        backgroundColor: 'rgba(102, 126, 234, 0.8)',
                        borderColor: 'rgba(102, 126, 234, 1)',
                        borderWidth: 2,
                        borderRadius: 8,
                        hoverBackgroundColor: 'rgba(102, 126, 234, 1)'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: { display: false },
                        tooltip: {
                            backgroundColor: 'rgba(0, 0, 0, 0.8)',
                            padding: 12,
                            titleFont: { size: 14 },
                            bodyFont: { size: 13 }
                        }
                    },
                    scales: {
                        y: { 
                            beginAtZero: true,
                            grid: {
                                color: 'rgba(0, 0, 0, 0.05)'
                            },
                            ticks: {
                                font: { size: 11 }
                            }
                        },
                        x: {
                            grid: {
                                display: false
                            },
                            ticks: {
                                font: { size: 11 }
                            }
                        }
                    }
                }
            });
            </text>
        }
    </script>
