@model SurveyApp.Models.SurveyModel
@{
    ViewData["Title"] = "Create Survey";
}

@section PageStyles {
    <style>
        /* Prevent horizontal overflow */
        body {
            overflow-x: hidden !important;
        }

        /* Mobile full-screen card */
        @@media (max-width: 767.98px) {
            .full-screen-card {
                min-height: 100vh;
                border-radius: 0 !important;
                margin: 0 !important;
            }
        }

        /* Section styling */
        .border-purple {
            border-color: #6f42c1 !important;
        }

        .bg-purple {
            background-color: #6f42c1 !important;
        }

        .text-purple {
            color: #6f42c1 !important;
        }

        .card-header {
            font-weight: 600;
        }
    </style>
}

<form asp-controller="SurveyCreation" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="container-fluid p-4 m-0">
        <div class="row g-0">
            <div class="col-12">
                <div class="card shadow mt-0 rounded-0 full-screen-card">
                    <div class="card-header bg-purple py-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="text-white fs-4 mb-0">
                                Create New Survey
                            </h6>
                            <a href="javascript:void(0);" class="btn btn-outline-danger text-white border-0"
                                onclick="showBackConfirmModal('@Url.Action("Index", "SurveyCreation")','Unsaved changes will be lost. Do you want to continue?')">
                                <i class="bi bi-arrow-left-circle"></i>
                                <span class="d-none d-md-inline ms-2">Back To List</span>
                            </a>
                        </div>
                    </div>
                    <div class="card-body p-3 p-md-4">
                        <div class="row gx-4 gy-6">
                            <div class="col-12">
                                @if (TempData["ResultMessage"] != null &&
                                                                !string.IsNullOrWhiteSpace(TempData["ResultMessage"]?.ToString()))
                                {
                                    <div class="alert alert-@TempData["ResultType"] alert-dismissible fade show"
                                        role="alert">
                                        @Html.Raw(TempData["ResultMessage"])
                                        <button type="button" class="btn-close btn-sm align-top" data-bs-dismiss="alert"
                                            aria-label="Close"></button>
                                    </div>
                                }
                            </div>

                            <!-- Client Selection -->
                            <div class="col-12">
                                <div class="form-custom-floating">
                                    <select asp-for="ClientID" id="clientDropdown"
                                        asp-items="@(ViewBag.Clients as SelectList)" class="form-select"
                                        placeholder=" ">
                                        <option value=""> </option>
                                    </select>
                                    <label asp-for="ClientID"></label>
                                    <span asp-validation-for="ClientID" class="text-danger"></span>
                                </div>
                            </div>

                            <!-- Client Information Section (Auto-filled) -->
                            <div class="col-12">
                                <div class="card border-info mt-1">
                                    <div class="card-header bg-info bg-opacity-10 border-bottom border-info mb-3"
                                        style="padding-top: 10px; padding-bottom: 10px;">
                                        <h6 class="mb-0 text-info">
                                            <i class="bi bi-building me-2"></i>Client Information
                                        </h6>
                                    </div>
                                    <div class="card-body mt-1">
                                        <div class="row g-3">
                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <input asp-for="AgencyName" type="text" class="form-control"
                                                        placeholder=" " id="agencyNameInput" readonly>
                                                    <label asp-for="AgencyName"></label>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <input asp-for="LocationSiteName" type="text" class="form-control"
                                                        placeholder=" " id="addressInput" readonly>
                                                    <label asp-for="LocationSiteName"></label>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <input type="text" class="form-control" placeholder=" "
                                                        id="contactPersonInput" readonly>
                                                    <label>Contact Person</label>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <input type="text" class="form-control" placeholder=" "
                                                        id="contactNumberInput" readonly>
                                                    <label>Contact Number</label>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <input type="text" class="form-control" placeholder=" "
                                                        id="stateInput" readonly>
                                                    <label>State</label>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <input type="text" class="form-control" placeholder=" "
                                                        id="cityInput" readonly>
                                                    <label>City</label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Hidden fields to store state and city names and IDs -->
                            <input type="hidden" asp-for="StateId" id="stateIdHidden" />
                            <input type="hidden" asp-for="MapMarking" id="stateNameHidden" />
                            <input type="hidden" asp-for="CityId" id="cityIdHidden" />
                            <input type="hidden" asp-for="CityDistrict" id="cityNameHidden" />

                            <!-- Survey Details Section -->
                            <div class="col-12">
                                <div class="card border-purple mt-1">
                                    <div class="card-header bg-purple border-bottom border-purple mb-2"
                                        style="padding-top: 10px; padding-bottom: 10px;">
                                        <h6 class="mb-0 text-white">
                                            <i class="bi bi-clipboard-data me-2"></i>Survey Details
                                        </h6>
                                    </div>

                                    <div class="card-body">
                                        <div class="row g-3 mt-1">
                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <input asp-for="SurveyName" type="text" class="form-control"
                                                        placeholder=" " required>
                                                    <label asp-for="SurveyName"></label>
                                                    <span asp-validation-for="SurveyName" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <select asp-for="RegionID"
                                                        asp-items="@(ViewBag.Regions as SelectList)" class="form-select"
                                                        placeholder=" ">
                                                        <option value=""> </option>
                                                    </select>
                                                    <label asp-for="RegionID"></label>
                                                    <span asp-validation-for="RegionID" class="text-danger"></span>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <select asp-for="ImplementationType"
                                                        asp-items="Model.ImplementationTypeOptions" class="form-select"
                                                        placeholder=" ">
                                                        <option value=""> </option>
                                                    </select>
                                                    <label asp-for="ImplementationType"></label>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <input asp-for="SurveyDate" type="date" class="form-control"
                                                        placeholder=" ">
                                                    <label asp-for="SurveyDate"></label>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <input asp-for="SurveyTeamName" type="text" class="form-control"
                                                        placeholder=" ">
                                                    <label asp-for="SurveyTeamName"></label>
                                                </div>
                                            </div>

                                            <div class="col-12 col-md-6">
                                                <div class="form-custom-floating">
                                                    <input asp-for="SurveyTeamContact" type="number"
                                                        class="form-control" placeholder=" " maxlength="15" required>
                                                    <label asp-for="SurveyTeamContact"></label>
                                                </div>
                                            </div>

                                            <div class="col-12">
                                                <div class="form-custom-floating">
                                                    <textarea asp-for="ScopeOfWork" class="form-control" placeholder=" "
                                                        rows="3" style="min-height: 100px;"></textarea>
                                                    <label asp-for="ScopeOfWork"></label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer mt-4">
                        <div class="d-flex flex-column flex-sm-row gap-2 justify-content-end">
                            <button type="submit" class="btn btn-success order-1 order-sm-0">
                                <i class="bi bi-plus-circle me-2"></i> Create Survey
                            </button>
                            <a asp-controller="SurveyCreation" asp-action="Index"
                                class="btn btn-secondary order-2 order-sm-1">
                                <i class="bi bi-x-circle me-2"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            // Handle client selection
            $('#clientDropdown').change(function () {
                var clientId = $(this).val();

                if (clientId) {
                    // Show loading popup
                    Swal.fire({
                        title: 'Loading Client Details...',
                        text: 'Please wait while we fetch the client information',
                        allowOutsideClick: false,
                        allowEscapeKey: false,
                        didOpen: () => {
                            Swal.showLoading();
                        }
                    });

                    $.ajax({
                        url: '@Url.Action("GetClientDetails", "SurveyCreation")',
                        type: 'GET',
                        data: { clientId: clientId },
                        success: function (response) {
                            // Close loading popup
                            Swal.close();

                            if (response.success) {
                                applyClientDetails(response.data);
                            } else {
                                Swal.fire({
                                    icon: 'error',
                                    title: 'Error',
                                    text: 'Error loading client details: ' + response.message
                                });
                            }
                        },
                        error: function () {
                            // Close loading popup and show error
                            Swal.fire({
                                icon: 'error',
                                title: 'Failed',
                                text: 'Failed to load client details. Please try again.'
                            });
                        }
                    });
                } else {
                    clearClientFields();
                }
            });
        });

        function applyClientDetails(client) {
            // Log the client details for debugging
            console.log('Client Details Received:', client);
            console.log('State ID:', client.stateId, 'State Name:', client.stateName);
            console.log('City ID:', client.cityId, 'City Name:', client.cityName);

            // Populate readonly fields
            $('#agencyNameInput').val(client.clientName || '');
            $('#addressInput').val(client.address || '');
            $('#contactPersonInput').val(client.contactPerson || '');
            $('#contactNumberInput').val(client.contactNumber || '');
            $('#stateInput').val(client.stateName || '');
            $('#cityInput').val(client.cityName || '');

            // Populate hidden fields for form submission
            $('#stateIdHidden').val(client.stateId || '');
            $('#stateNameHidden').val(client.stateName || '');
            $('#cityIdHidden').val(client.cityId || '');
            $('#cityNameHidden').val(client.cityName || '');

            // Log what was actually set
            console.log('Hidden Fields Set:');
            console.log('StateId:', $('#stateIdHidden').val());
            console.log('MapMarking (State Name):', $('#stateNameHidden').val());
            console.log('CityId:', $('#cityIdHidden').val());
            console.log('CityDistrict (City Name):', $('#cityNameHidden').val());
        }

        function clearClientFields() {
            $('#agencyNameInput, #addressInput, #contactPersonInput, #contactNumberInput, #stateInput, #cityInput').val('');
            $('#stateIdHidden, #stateNameHidden, #cityIdHidden, #cityNameHidden').val('');
        }

        function showBackConfirmModal(url, message) {
            let modal = document.getElementById("backConfirmModal");

            if (message) {
                modal.querySelector(".modal-body").innerText = message;
            }

            // set URL on continue button
            document.getElementById("confirmContinueBtn").setAttribute("href", url);

            // show modal
            var myModal = new bootstrap.Modal(modal, {
                backdrop: 'static',
                keyboard: false
            });
            myModal.show();
        }
    </script>
}