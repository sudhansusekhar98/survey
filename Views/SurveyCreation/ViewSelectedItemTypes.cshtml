@model List<SurveyApp.Models.AssignedItemsModel>
@{
    ViewData["Title"] = "Selected Device Types";
}


<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
            <h3 class="mb-4">Assigned Device Types</h3>
            <div class="row">
                @if (Model != null && Model.Any())
                {
                    @foreach (var assigned in Model)
                    {
                        <div class="col-md-6 col-lg-4 mb-4">
                            <div class="card shadow h-100">
                                <div class="card-header bg-purple text-white">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span><i class="bi bi-geo-alt-fill me-2"></i>Location: @assigned.LocID</span>
                                        <span><i class="bi bi-hash me-2"></i>ID: @assigned.SurveyId</span>
                                    </div>
                                    <div class="mt-1"><i class="bi bi-clipboard-check me-2"></i>@assigned.SurveyName</div>
                                </div>
                                <div class="card-body">
                                    @if (assigned.AssignItemList != null && assigned.AssignItemList.Any())
                                    {
                                        <ul class="list-group list-group-flush">
                                            @foreach (var item in assigned.AssignItemList)
                                            {
                                                <li class="list-group-item">
                                                    <div class="fw-bold fs-5">@item.TypeName <span class="badge bg-info ms-2">@item.GroupName</span></div>
                                                    <div class="text-muted mb-2">@item.TypeDesc</div>
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <span><i class="bi bi-person-check me-2"></i>Assigned</span>
                                                        <span><i class="bi bi-calendar-check me-2"></i>@DateTime.Now.ToString("dd MMM yyyy")</span>
                                                        <span>
                                                            @if (item.IsAssigned)
                                                            {
                                                                <span class="badge bg-success">Assigned</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-danger">Unassigned</span>
                                                            }
                                                        </span>
                                                    </div>
                                                </li>
                                            }
                                        </ul>
                                    }
                                    else
                                    {
                                        <div class="text-center py-3">
                                            <i class="bi bi-inbox fs-1 text-muted mb-2 d-block"></i>
                                            <span class="text-muted">No device types assigned.</span>
                                        </div>
                                    }
                                </div>
                                <div class="card-footer text-end">
                                    <a asp-controller="SurveyCreation" 
                                       asp-action="ItemTypeMaster" 
                                       asp-route-locId="@assigned.LocID"
                                       asp-route-surveyId="@assigned.SurveyId"
                                       asp-route-SurveyName="@assigned.SurveyName"
                                       class="btn btn-outline-warning text-purple border-0 mx-2 my-0">
                                        <i class="bi bi-pencil-square me-2"></i> Edit
                                    </a>
                                    <a asp-controller="SurveyCreation" 
                                       asp-action="Index"
                                       class="btn btn-outline-danger text-purple border-0 mx-0 my-0">
                                        <i class="bi bi-arrow-left-circle me-2"></i> Back
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12">
                        <div class="text-center py-5">
                            <i class="bi bi-inbox fs-1 text-muted mb-3 d-block"></i>
                            <h5 class="text-muted mb-3">No Device Types Assigned</h5>
                            <p class="text-muted mb-4">No assigned device types found for this location.</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section PageStyles {
    <style>
        .bg-purple {
            background-color: #6f42c1 !important;
            color: #fff !important;
        }
        .text-purple {
            color: #6f42c1 !important;
        }
        .card {
            transition: box-shadow 0.2s;
        }
        .card:hover {
            box-shadow: 0 0 0.75rem #6f42c133;
        }
    </style>
}
