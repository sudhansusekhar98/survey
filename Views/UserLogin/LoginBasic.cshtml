
@model AnalyticaDocs.Models.UserLoginModel
@{
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
    ViewData["Title"] = "Login";
}

@section PageStyles {
    <link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">

}

<script>

        
</script>

@* ************** Content ************** *@

<div class="container-xxl">
    <div class="authentication-wrapper authentication-basic container-p-y">
        <div class="authentication-inner">
            <!-- Register -->
            <div class="card px-sm-6 px-0">
                <div class="card-body pt-2">
                    <!-- Logo -->
                    <div class="app-brand justify-content-center mb-8">
                        <a href="https://www.vlaccess.com/" class="app-brand-link gap-2" target="_blank">
                            <span class="app-brand-logo demo"> <img src="~/img/icons/vlaccess_logo.png" class="rounded float-start" alt="Logo"  height="50"></span>
                        </a>
                    </div>
                    <!-- /Logo -->
                    <h4 class="mb-4 text-center">Welcome to <span class="text-shadow">  Survey <span class="text-muted"> App </span> </span> @* <img src="~/img/icons/analytica.png" class="rounded" alt="Logo" width="100" height="30">  *@👋</h4>

                    <form asp-controller="UserLogin" asp-action="Index" method="post">
                        @Html.AntiForgeryToken()
                        <div class="row mb-4 form-control-validation">
                            <label class="col-sm-3 col-form-label" for="basic-default-company">Login ID</label>
                            <div class="col-sm-9">
                                <input asp-for="LoginId" type="text" class="form-control" placeholder="Enter your Login ID">
                            </div>
                        </div>
                        <div class="row mb-6 form-password-toggle form-control-validation">
                            <label class="col-sm-3 col-form-label" for="password">Password</label>
                            <div class="col-sm-9">                            
                                <div class="input-group input-group-merge">
                                    <input asp-for="LoginPassword" type="password" class="form-control" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password" />
                                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                </div>
                            </div>

                        </div>
                        @if (TempData["LoginMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show mt-2" role="alert">
                                @Html.Raw(TempData["LoginMessage"])
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        @if (TempData["LoginFailed"] != null)
                        {
                            <div class="alert alert-danger d-flex mt-2 align-items-center" role="alert">
                                <i class="bi bi-exclamation-triangle-fill me-2 fs-4 text-danger"></i>
                                <div>
                                    @Html.Raw(TempData["LoginFailed"])
                                </div>
                            </div>
                        }
                        <div class="mb-6">
                            <div class="d-flex justify-content-between mt-8">
                                <div class="form-check mb-0 ms-2">
                                    <input class="form-check-input" type="checkbox" id="remember-me">
                                    <label class="form-check-label" for="remember-me">
                                        Remember Me
                                    </label>
                                </div>
                                <a href="javascript:void(0)">
                                    <span>Forgot Password?</span>
                                </a>
                            </div>
                        </div>
                        <div class="mb-4">
                            <button class="btn btn-primary d-grid w-100" type="submit">Login</button>
                        </div>
                    </form>

                </div>
            </div>
            <!-- /Register -->
        </div>
    </div>
</div>
