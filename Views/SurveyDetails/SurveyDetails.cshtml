@using SurveyApp.Models
@model IEnumerable<SurveyDetailsLocationModel>

@{
    ViewData["Title"] = "Survey Details";
    var index = 0;
}

@section VendorStyles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
}

@section PageStyles {
    <style>
        /* Prevent horizontal overflow */
        body {
            overflow-x: hidden !important;
        }
        
        /* Mobile full-screen card */
        @@media (max-width: 767.98px) {
            .full-screen-card {
                min-height: 100vh;
                border-radius: 0 !important;
                margin: 0 !important;
            }
        }

        /* Ensure preview modal and alerts appear above everything */
        #previewModal {
            z-index: 99999 !important;
        }

        #previewModal .modal-backdrop {
            z-index: 99998 !important;
        }

        .swal2-container {
            z-index: 999999 !important;
        }
        
        /* Ensure all message boxes stay below modals */
        .card-body > div[class*="border-start"],
        .accordion-body > div[class*="border-start"] {
            z-index: 1 !important;
            position: relative;
        }

        /* Selected accordion item styling */
        .accordion-item.has-items {
            border-left: 4px solid #28a745 !important;
            background-color: #f0f9f4 !important;
        }

        .accordion-item.has-items .accordion-button {
            background-color: #e8f5e9 !important;
            border-left: 4px solid #28a745;
        }

        .accordion-item.has-items .accordion-button:not(.collapsed) {
            background-color: #d4edda !important;
            color: #155724;
        }

        .accordion-item.has-items .accordion-button .item-type-icon {
            color: #28a745 !important;
        }

        /* Item count badge styling */
        .item-count-badge {
            background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
            color: white;
            font-weight: 600;
            padding: 0.35rem 0.75rem;
            border-radius: 20px;
            font-size: 0.875rem;
            box-shadow: 0 2px 4px rgba(40, 167, 69, 0.3);
            animation: pulse 2s ease-in-out infinite;
        }

        @@keyframes pulse {
            0%, 100% { box-shadow: 0 2px 4px rgba(40, 167, 69, 0.3); }
            50% { box-shadow: 0 4px 8px rgba(40, 167, 69, 0.5); }
        }

        /* Checkmark icon for completed items */
        .completed-check {
            color: #28a745;
            font-size: 1.5rem;
            margin-right: 0.5rem;
            animation: checkmark 0.5s ease-in-out;
        }

        @@keyframes checkmark {
            0% { transform: scale(0); }
            50% { transform: scale(1.2); }
            100% { transform: scale(1); }
        }
    </style>
}

@Html.AntiForgeryToken()

<div class="container-fluid p-0 m-0">
    <div class="row g-0">
        <div class="col-12">
            <div class="card shadow mt-0 rounded-0 full-screen-card">
                <div class="card-header bg-purple py-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="text-white fs-4 mb-0">Survey Details</h6>
                        <div class="d-flex gap-2">
                            @if (Model != null && Model.Any())
                            {
                                var firstItem = Model.FirstOrDefault();
                                if (firstItem != null)
                                {
                                    <button type="button" 
                                            class="btn btn-sm btn-success" 
                                            onclick="showPreviewModal(@firstItem.SurveyID, @firstItem.LocID)">
                                        <i class="bi bi-eye-fill"></i>
                                        <span class="d-none d-sm-inline ms-1">Preview & Submit</span>
                                    </button>
                                }
                            }
                            <a asp-controller="SurveyCreation" asp-action="SurveyLocation" asp-route-surveyId="@(Model?.FirstOrDefault()?.SurveyID)" class="btn btn-sm btn-outline-light">
                                <i class="bi bi-arrow-left-circle"></i>
                                <span class="d-none d-sm-inline ms-1">Back to Locations</span>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="card-body">
                    @if (TempData["ResultMessage"] != null && !string.IsNullOrWhiteSpace(TempData["ResultMessage"]?.ToString()))
                    {
                        var resultType = TempData["ResultType"]?.ToString() ?? "info";
                        var borderColor = resultType switch
                        {
                            "success" => "border-success",
                            "danger" => "border-danger",
                            "warning" => "border-warning",
                            "info" => "border-info",
                            _ => "border-info"
                        };
                        var bgColor = resultType switch
                        {
                            "success" => "bg-success-subtle",
                            "danger" => "bg-danger-subtle",
                            "warning" => "bg-warning-subtle",
                            "info" => "bg-info-subtle",
                            _ => "bg-light"
                        };
                        var textColor = resultType switch
                        {
                            "success" => "text-success",
                            "danger" => "text-danger",
                            "warning" => "text-warning",
                            "info" => "text-info",
                            _ => "text-dark"
                        };
                        <div class="mb-3 p-3 @bgColor rounded border-start border-4 @borderColor position-relative">
                            <div class="d-flex align-items-start">
                                <div class="flex-grow-1 @textColor">
                                    @Html.Raw(TempData["ResultMessage"])
                                </div>
                                <button type="button" class="btn-close btn-sm ms-2" onclick="this.parentElement.parentElement.style.display='none'" aria-label="Close"></button>
                            </div>
                        </div>
                    }

                    <div class="d-flex flex-row align-items-center gap-2 flex-wrap mb-1 mt-2">
                        <span class="badge bg-purple d-flex align-items-center px-3 py-1 shadow-sm" style="font-size:0.92rem; height:32px; line-height:32px; border-radius:0.5rem;">
                            <i class="bi bi-clipboard-data me-1" style="font-size:1.1em;"></i>
                            @(Model?.FirstOrDefault()?.SurveyName ?? "Survey Details")
                        </span>
                        <span class="badge bg-secondary d-flex align-items-center px-3 py-1 shadow-sm" style="font-size:0.92rem; height:32px; line-height:32px; border-radius:0.5rem;">
                            <i class="bi bi-geo-alt-fill me-1" style="font-size:1.1em;"></i>
                            @(Model?.FirstOrDefault()?.LocName ?? "Location Details")
                        </span>
                        @{
                            var status = ViewBag.LocationStatus as string ?? "Pending";
                            var statusBadgeClass = status switch {
                                "Pending" => "bg-secondary",
                                "In Progress" => "bg-info",
                                "Completed" => "bg-success",
                                "Verified" => "bg-primary",
                                _ => "bg-secondary"
                            };
                            var statusIcon = status switch {
                                "Pending" => "bi-clock",
                                "In Progress" => "bi-play-circle",
                                "Completed" => "bi-check-circle",
                                "Verified" => "bi-shield-check",
                                _ => "bi-question-circle"
                            };
                        }
                        <span class="badge @statusBadgeClass d-flex align-items-center px-3 py-1 shadow-sm ms-1" style="font-size:0.92rem; letter-spacing:0.01em; height:32px; line-height:32px; border-radius:0.5rem;">
                            <i class="bi @statusIcon me-1" style="font-size:1.1em;"></i>
                            @status
                        </span>
                        @if (ViewBag.IsCompleted == true)
                        {
                            var firstItem = Model?.FirstOrDefault();
                            if (firstItem != null)
                            {
                                <button type="button" 
                                        class="btn btn-warning d-flex align-items-center gap-1 px-3 py-1 shadow-sm border-0 ms-1" 
                                        style="font-size:0.92rem; height:32px; line-height:32px; font-weight:500; letter-spacing:0.01em; border-radius:0.5rem;" 
                                        onclick="unlockLocationForEditing(@firstItem.SurveyID, @firstItem.LocID)">
                                    <i class="bi bi-unlock" style="font-size:1.1em;"></i> 
                                    <span class="d-none d-sm-inline">Unlock for Editing</span>
                                    <span class="d-inline d-sm-none">Unlock</span>
                                </button>
                            }
                        }
                        
                        @* Show warning if completed *@
                        @if (ViewBag.IsCompleted == true)
                        {
                            <div class="w-100 mt-3 mb-0 p-3 bg-warning-subtle rounded border-start border-4 border-warning">
                                <p class="mb-0 text-warning-emphasis">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    <strong>Location is @status!</strong> Items cannot be modified. Click "Unlock for Editing" to make changes.
                                </p>
                            </div>
                        }
                    </div>

                    <div class="accordion mt-4" id="accordionExample">
                    @if (Model != null && Model.Any())
                    {
                        foreach (var gridData in Model)
                        {
                            var headingId = $"heading_{index}";
                            var collapseId = $"collapse_{index}";
                            var hasItems = gridData.ItemLists != null && gridData.ItemLists.Any();
                            var itemCount = hasItems && gridData.ItemLists != null ? gridData.ItemLists.Count : 0;
                            var totalQtyReq = hasItems && gridData.ItemLists != null ? gridData.ItemLists.Sum(x => x.ItemQtyReq) : 0;
                            var accordionClass = hasItems ? "card accordion-item shadow-sm mb-2 has-items" : "card accordion-item shadow-sm mb-2";
                            
                            <div class="@accordionClass">
                                <h2 class="accordion-header" id="@headingId">
                                    <button type="button"
                                            class="accordion-button collapsed"
                                            data-bs-toggle="collapse"
                                            data-bs-target="#@collapseId"
                                            aria-expanded="false"
                                            aria-controls="@collapseId">

                                        <div class="d-flex align-items-center w-100">
                                            @if (hasItems)
                                            {
                                                <i class="bi bi-check-circle-fill completed-check"></i>
                                            }
                                            <i class="bi bi-cpu fs-2 item-type-icon me-3" style="@(hasItems ? "color: #28a745;" : "color: #6c757d;")"></i>
                                            <span class="fw-semibold fs-5">
                                                @gridData.TypeName
                                            </span>
                                            @if (hasItems)
                                            {
                                                <span class="item-count-badge ms-3">
                                                    <i class="bi bi-check2-all me-1"></i>
                                                    @itemCount item@(itemCount != 1 ? "s" : "") selected
                                                    @if (totalQtyReq > 0)
                                                    {
                                                        <span class="ms-1">(Qty: @totalQtyReq)</span>
                                                    }
                                                </span>
                                            }
                                            <span class="badge bg-info ms-auto me-3">ID: @gridData.ItemTypeID</span>
                                        </div>
                                    </button>
                                </h2>

                                <div id="@collapseId"
                                     class="accordion-collapse collapse"
                                     data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        @if (!string.IsNullOrWhiteSpace(gridData.TypeDesc))
                                        {
                                            <div class="mb-3 mt-3 p-3 bg-light rounded border-start border-4 border-info">
                                                <p class="mb-0 text-dark">
                                                    <i class="bi bi-info-circle text-info me-2"></i><strong>Description:</strong> @gridData.TypeDesc
                                                </p>
                                            </div>
                                        }

                                        @if (gridData.ItemLists != null && gridData.ItemLists.Any())
                                        {
                                            <div class="row g-3">
                                                @foreach (var item in gridData.ItemLists)
                                                {
                                                    <div class="col-12 col-md-6 col-lg-4">
                                                        <div class="card h-100 shadow-sm border-0 hover-lift">
                                                            <div class="card-header card-h bg-light border-0 d-flex justify-content-between align-items-center">
                                                                <h6 class="mb-0 fw-semibold text-dark">@item.ItemName</h6>
                                                                <span class="badge bg-purple">ID: @item.ItemID</span>
                                                            </div>
                                                            <div class="card-body">
                                                                @* <div class="mb-3 text-center">
                                                                    @if (!string.IsNullOrWhiteSpace(item.ImgPath))
                                                                    {
                                                                        <img src="@Url.Content(item.ImgPath)" alt="item image"
                                                                             class="img-fluid rounded shadow-sm" style="max-height:180px; object-fit:cover; width:100%;"
                                                                             loading="lazy" />
                                                                    }
                                                                    else
                                                                    {
                                                                        <img src="~/img/elements/Noimage.png" alt="placeholder"
                                                                             class="img-fluid rounded shadow-sm" style="max-height:180px; object-fit:cover; width:100%;"
                                                                             loading="lazy" />
                                                                    }
                                                                </div> *@

                                                                <div class="row mb-3">
                                                                    <div class="col-6">
                                                                        <small class="text-muted d-block mb-1">
                                                                            <i class="bi bi-box me-1"></i><strong>Existing:</strong>
                                                                        </small>
                                                                        <span class="badge bg-secondary fs-6">@item.ItemQtyExist</span>
                                                                    </div>
                                                                    <div class="col-6">
                                                                        <small class="text-muted d-block mb-1">
                                                                            <i class="bi bi-cart-plus me-1"></i><strong>Required:</strong>
                                                                        </small>
                                                                        <span class="badge bg-success fs-6">@item.ItemQtyReq</span>
                                                                    </div>
                                                                </div>

                                                                @if (!string.IsNullOrWhiteSpace(item.Remarks))
                                                                {
                                                                    <div class="mb-2">
                                                                        <small class="text-muted d-block mb-1">
                                                                            <i class="bi bi-chat-left-text me-1"></i><strong>Remarks:</strong>
                                                                        </small>
                                                                        <p class="text-dark small mb-0">@item.Remarks</p>
                                                                    </div>
                                                                }
                                                            </div>
                                                            @* <div class="card-footer bg-white border-0 d-flex gap-2 justify-content-center pb-3">
                                                                <a href="@Url.Action("UpdateItem", "SurveyDetails", new { surveyId = gridData.SurveyID, locId = gridData.LocID, itemTypeID = gridData.ItemTypeID, itemId = item.ItemID })"
                                                                   class="btn btn-sm btn-warning"
                                                                   title="Edit Item">
                                                                    <i class="bi bi-pencil me-1"></i>Edit
                                                                </a>
                                                                <a class="btn btn-sm btn-info"
                                                                   href="@Url.Action("ViewItem", "SurveyDetails", new { itemId = item.ItemID })"
                                                                   title="View Details">
                                                                    <i class="bi bi-eye me-1"></i>View
                                                                </a>
                                                            </div> *@
                                                        </div>
                                                    </div>
                                                }
                                            </div>
                                            <div class="text-center mt-4">
                                                <a href="@Url.Action("UpdateItem", "SurveyDetails", new { surveyId = gridData.SurveyID, locId = gridData.LocID, itemTypeID = gridData.ItemTypeID, itemId = 0 })"
                                                   class="btn btn-primary">
                                                    <i class="bi bi-plus-circle me-2"></i> View / Edit
                                                </a>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="text-center py-5">
                                                <i class="bi bi-inbox fs-1 text-muted d-block mb-3"></i>
                                                <p class="text-muted fs-5 mb-3">No items added yet for this device type.</p>
                                                <a href="@Url.Action("UpdateItem", "SurveyDetails", new { surveyId = gridData.SurveyID, locId = gridData.LocID, itemTypeID = gridData.ItemTypeID, itemId = 0 })"
                                                   class="btn btn-primary">
                                                    <i class="bi bi-play-circle me-2"></i> Start Survey
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>

                            index++;
                        }
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox fs-1 text-muted d-block mb-3"></i>
                            <p class="text-muted fs-5">No survey data found. Please select a survey and location.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Preview Modal -->
<div class="modal fade" id="previewModal" tabindex="-1" aria-labelledby="previewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header bg-purple text-white py-3">
                <h5 class="modal-title fw-bold text-white" id="previewModalLabel">
                    <i class="bi bi-eye-fill me-2"></i>Survey Preview - All Items
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="previewModalContent">
                <div class="text-center py-5">
                    <div class="spinner-border text-primary" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-3 text-muted">Loading preview...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-2"></i>Close
                </button>
                <button type="button" class="btn btn-success" id="submitLocationBtn" onclick="submitLocationCompletion()">
                    <i class="bi bi-check-circle me-2"></i>Submit & Mark as Completed
                </button>
                <button type="button" class="btn btn-primary" id="submitSurveyBtn" onclick="submitSurveyForApproval()">
                    <i class="bi bi-send-check me-2"></i>Submit Survey for Approval
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    .hover-lift {
        transition: all 0.3s ease;
    }
    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }
    .card-h {
        --bs-bg-opacity: 1;
        background-color: rgb(159 139 233 / 78%) !important;
        padding: 0.75rem 1rem;
    }
    .accordion-button:not(.collapsed) {
        background-color: rgb(159 139 233 / 78%) !important;
        color: #212529;
    }
    .accordion-button:focus {
        box-shadow: none;
        border-color: rgba(0,0,0,.125);
    }
    
    /* Ensure alerts in accordion don't overlap modals */
    .accordion-body .alert {
        position: relative;
        z-index: 1 !important;
    }
</style>

@section VendorScripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}

@section Scripts {
    <script src="~/js/survey-details.js"></script>
    <script>
        // Initialize survey details with Razor-generated URLs
        initSurveyDetails(
            '@Url.Action("GetLocationPreview", "SurveyDetails")',
            '@Url.Action("SubmitLocationCompletion", "SurveyDetails")',
            '@Url.Action("UnlockLocationForEditing", "SurveyDetails")',
            @((ViewBag.IsCompleted ?? false).ToString().ToLower()),
            $('input[name="__RequestVerificationToken"]').val()
        );
    </script>
}
