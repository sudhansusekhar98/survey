@model SurveyApp.Models.SurveyReportViewModel
@{
    ViewData["Title"] = "Survey Summary Report";
}

<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header bg-purple py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="text-white mb-0">
                    <i class="bi bi-file-earmark-bar-graph me-2"></i>@Model.ReportTitle
                </h5>
                <div>
                    <button onclick="window.print()" class="btn btn-outline-light btn-sm me-2">
                        <i class="bi bi-printer me-1"></i>Print
                    </button>
                    <a asp-action="ExportToExcel" 
                       asp-route-fromDate="@Model.FromDate?.ToString("yyyy-MM-dd")"
                       asp-route-toDate="@Model.ToDate?.ToString("yyyy-MM-dd")"
                       asp-route-status="@Model.Status"
                       asp-route-region="@Model.Region"
                       asp-route-type="@Model.ImplementationType"
                       class="btn btn-success btn-sm">
                        <i class="bi bi-file-earmark-excel me-1"></i>Export to Excel
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <!-- Report Info -->
            <div class="row mb-4 no-print mt-3">
                <div class="col-md-6">
                    <p class="mb-1"><strong>Generated By:</strong> @Model.GeneratedBy</p>
                    <p class="mb-1"><strong>Generated On:</strong> @Model.GeneratedDate.ToString("dd-MMM-yyyy HH:mm")</p>
                </div>
                <div class="col-md-6 text-end">
                    @if (Model.FromDate.HasValue || Model.ToDate.HasValue)
                    {
                        <p class="mb-1">
                            <strong>Date Range:</strong>
                            @(Model.FromDate?.ToString("dd-MMM-yyyy") ?? "Start") to @(Model.ToDate?.ToString("dd-MMM-yyyy") ?? "End")
                        </p>
                    }
                </div>
            </div>

            <!-- Filter Section -->
            <div class="card mb-3 border-0.5 shadow-sm no-print" style="border-radius: 10px; overflow: hidden; margin-top: 0.25rem;">
                <div class="card-body" style="background-color: #f8f9fa; padding: 1.5rem;">
                    <form asp-action="SummaryReport" method="get">
                        <div class="row g-3">
                            <div class="col-12 col-md-6 col-lg-3">
                                <label class="form-label fw-semibold small text-secondary mb-2">
                                    <i class="bi bi-calendar-event me-1 text-primary"></i>From Date
                                </label>
                                <input type="date" name="fromDate" class="form-control shadow-sm" value="@Model.FromDate?.ToString("yyyy-MM-dd")" style="border-radius: 8px; border: 1px solid #dee2e6;">
                            </div>
                            <div class="col-12 col-md-6 col-lg-3">
                                <label class="form-label fw-semibold small text-secondary mb-2">
                                    <i class="bi bi-calendar-check me-1 text-success"></i>To Date
                                </label>
                                <input type="date" name="toDate" class="form-control shadow-sm" value="@Model.ToDate?.ToString("yyyy-MM-dd")" style="border-radius: 8px; border: 1px solid #dee2e6;">
                            </div>
                            <div class="col-12 col-md-6 col-lg-2">
                                <label class="form-label fw-semibold small text-secondary mb-2">
                                    <i class="bi bi-funnel me-1 text-primary"></i>Status
                                </label>
                                <select name="status" class="form-select shadow-sm" style="border-radius: 8px; border: 1px solid #dee2e6;">
                                    <option value="">All Statuses</option>
                                    @if (ViewBag.StatusOptions != null)
                                    {
                                        foreach (var status in ViewBag.StatusOptions)
                                        {
                                            <option value="@status" selected="@(Model.Status == status)">@status</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-12 col-md-6 col-lg-2">
                                <label class="form-label fw-semibold small text-secondary mb-2">
                                    <i class="bi bi-map me-1 text-success"></i>Region
                                </label>
                                <select name="region" class="form-select shadow-sm" style="border-radius: 8px; border: 1px solid #dee2e6;">
                                    <option value="">All Regions</option>
                                    @if (ViewBag.RegionOptions != null)
                                    {
                                        foreach (var region in ViewBag.RegionOptions)
                                        {
                                            <option value="@region" selected="@(Model.Region == region)">@region</option>
                                        }
                                    }
                                </select>
                            </div>
                            <div class="col-12 col-md-6 col-lg-2">
                                <label class="form-label fw-semibold small text-secondary mb-2">
                                    <i class="bi bi-building me-1 text-warning"></i>Implementation Type
                                </label>
                                <select name="type" class="form-select shadow-sm" style="border-radius: 8px; border: 1px solid #dee2e6;">
                                    <option value="">All Types</option>
                                    @if (ViewBag.TypeOptions != null)
                                    {
                                        foreach (var type in ViewBag.TypeOptions)
                                        {
                                            <option value="@type" selected="@(Model.ImplementationType == type)">@type</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex gap-2 flex-wrap">
                                    <button type="submit" class="btn btn-purple shadow-sm px-4" style="border-radius: 8px;">
                                        <i class="bi bi-funnel-fill me-2"></i>Apply Filters
                                    </button>
                                    <a asp-action="SummaryReport" class="btn btn-outline-secondary shadow-sm px-4" style="border-radius: 8px;">
                                        <i class="bi bi-x-circle me-2"></i>Clear All Filters
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Summary Statistics -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card border-start border-primary border-4 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">Total Surveys</h6>
                                    <h2 class="mb-0 text-primary">@Model.TotalSurveys</h2>
                                </div>
                                <i class="bi bi-clipboard-data text-primary" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-start border-success border-4 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">Completed</h6>
                                    <h2 class="mb-0 text-success">@Model.CompletedSurveys</h2>
                                    <small class="text-success">@Model.CompletionRate%</small>
                                </div>
                                <i class="bi bi-check-circle text-success" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-start border-warning border-4 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">In Progress</h6>
                                    <h2 class="mb-0 text-warning">@Model.InProgressSurveys</h2>
                                </div>
                                <i class="bi bi-hourglass-split text-warning" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card border-start border-danger border-4 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="text-muted mb-1">Missed Deadline</h6>
                                    <h2 class="mb-0 text-danger">@Model.MissedDeadlineSurveys</h2>
                                </div>
                                <i class="bi bi-calendar-x text-danger" style="font-size: 2rem;"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Charts Row -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h6 class="mb-0">Status Breakdown</h6>
                        </div>
                        <div class="card-body">
                            @if (Model.SurveysByStatus.Any())
                            {
                                <canvas id="statusChart"></canvas>
                            }
                            else
                            {
                                <p class="text-muted text-center">No data available</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h6 class="mb-0">Region Distribution</h6>
                        </div>
                        <div class="card-body">
                            @if (Model.SurveysByRegion.Any())
                            {
                                <canvas id="regionChart"></canvas>
                            }
                            else
                            {
                                <p class="text-muted text-center">No data available</p>
                            }
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-header">
                            <h6 class="mb-0">Implementation Types</h6>
                        </div>
                        <div class="card-body">
                            @if (Model.SurveysByImplementationType.Any())
                            {
                                <canvas id="typeChart"></canvas>
                            }
                            else
                            {
                                <p class="text-muted text-center">No data available</p>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Survey List Table -->
            <div class="card shadow-sm">
                <div class="card-header">
                    <h6 class="mb-0">Survey Details (@Model.Surveys.Count surveys)</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover datatables-basic">
                            <thead class="table-light">
                                <tr>
                                    <th>Survey ID</th>
                                    <th>Survey Name</th>
                                    <th>Status</th>
                                    <th>Region</th>
                                    <th>Type</th>
                                    <th>Date</th>
                                    <th>Due Date</th>
                                    <th class="no-print">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var survey in Model.Surveys)
                                {
                                    var statusClass = survey.SurveyStatus switch
                                    {
                                        "Completed" => "success",
                                        "In Progress" => "warning",
                                        "Pending" => "secondary",
                                        "On Hold" => "danger",
                                        _ => "dark"
                                    };
                                    var isOverdue = survey.DueDate.HasValue && survey.DueDate.Value < DateTime.Now && survey.SurveyStatus != "Completed";

                                    <tr>
                                        <td>@survey.SurveyId</td>
                                        <td>@survey.SurveyName</td>
                                        <td><span class="badge bg-@statusClass">@survey.SurveyStatus</span></td>
                                        <td>@survey.RegionName</td>
                                        <td>@survey.ImplementationType</td>
                                        <td>@(survey.SurveyDate?.ToString("dd-MMM-yyyy") ?? "-")</td>
                                        <td>
                                            @if (survey.DueDate.HasValue)
                                            {
                                                <span class="@(isOverdue ? "text-danger fw-bold" : "")">
                                                    @survey.DueDate.Value.ToString("dd-MMM-yyyy")
                                                    @if (isOverdue)
                                                    {
                                                        <i class="bi bi-exclamation-triangle"></i>
                                                    }
                                                </span>
                                            }
                                            else
                                            {
                                                <span>-</span>
                                            }
                                        </td>
                                        <td class="no-print">
                                            <a asp-action="DetailedReport" asp-route-surveyId="@survey.SurveyId" class="btn btn-sm btn-primary">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Status Chart
        @if (Model.SurveysByStatus.Any())
        {
            <text>
            const statusCtx = document.getElementById('statusChart').getContext('2d');
            new Chart(statusCtx, {
                type: 'doughnut',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.SurveysByStatus.Keys)),
                    datasets: [{
                        data: @Html.Raw(Json.Serialize(Model.SurveysByStatus.Values)),
                        backgroundColor: ['#28a745', '#ffc107', '#6c757d', '#dc3545', '#17a2b8']
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });
            </text>
        }

        // Region Chart
        @if (Model.SurveysByRegion.Any())
        {
            <text>
            const regionCtx = document.getElementById('regionChart').getContext('2d');
            new Chart(regionCtx, {
                type: 'pie',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.SurveysByRegion.Keys)),
                    datasets: [{
                        data: @Html.Raw(Json.Serialize(Model.SurveysByRegion.Values)),
                        backgroundColor: ['#667eea', '#764ba2', '#f093fb', '#4facfe', '#00f2fe']
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { position: 'bottom' }
                    }
                }
            });
            </text>
        }

        // Type Chart
        @if (Model.SurveysByImplementationType.Any())
        {
            <text>
            const typeCtx = document.getElementById('typeChart').getContext('2d');
            new Chart(typeCtx, {
                type: 'bar',
                data: {
                    labels: @Html.Raw(Json.Serialize(Model.SurveysByImplementationType.Keys)),
                    datasets: [{
                        label: 'Surveys',
                        data: @Html.Raw(Json.Serialize(Model.SurveysByImplementationType.Values)),
                        backgroundColor: '#667eea'
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: { beginAtZero: true }
                    }
                }
            });
            </text>
        }
    </script>
}

<style>
    .bg-purple {
        background-color: #667eea !important;
    }
    
    .btn-purple {
        background-color: #667eea;
        border-color: #667eea;
        color: white;
    }
    
    .btn-purple:hover {
        background-color: #5568d3;
        border-color: #5568d3;
        color: white;
    }
    
    @@media print {
        .no-print {
            display: none !important;
        }
        .card {
            border: 1px solid #ddd !important;
            box-shadow: none !important;
        }
    }
</style>
