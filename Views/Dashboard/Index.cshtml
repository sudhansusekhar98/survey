@model SurveyApp.Models.DashboardViewModel
@{
    ViewData["Title"] = "Survey Dashboard";
}

@section VendorStyles {
    <link rel="stylesheet" href="~/vendor/libs/apex-charts/apex-charts.css" />
}

@section PageStyles {
    <link rel="stylesheet" href="~/css/dashboard.css" />
    <style>
        .welcome-banner, .welcome-banner * {
            color: #fff !important;
        }
    </style>
}

<div class="container-fluid">
    <!-- Date Time Widget -->
    <div class="datetime-widget">
        <div class="text-center">
            <div class="day" id="currentDay">MONDAY</div>
            <div class="time" id="currentTime">12:00:00</div>
            <div class="date" id="currentDate">Nov 25, 2025</div>
        </div>
    </div>

    <!-- Welcome Banner -->
    <div class="welcome-banner">
        <div class="row align-items-center">
            <div class="col-md-8 ">
                <h3 class="mb-2 ">Welcome back, @Model.UserName! 👋</h3>
                <p class="mb-0 opacity-75 ">Here's what's happening with your surveys today</p>
            </div>
            <div class="col-md-4 text-end">
                @if (Model.CanCreate)
                {
                    <a asp-controller="SurveyCreation" asp-action="Create" class="btn btn-light quick-action-btn">
                        <i class="bx bx-plus-circle me-2"></i>Create New Survey
                    </a>
                }
            </div>
        </div>
    </div>

    @if (ViewBag.IsFiltered == true)
    {
        <div class="alert alert-info alert-dismissible fade show d-flex align-items-center" role="alert">
            <i class="bx bx-filter-alt bx-lg me-2"></i>
            <div class="flex-grow-1">
                <strong>Filter Active:</strong> 
                @if (ViewBag.CurrentFilter == "status")
                {
                    <span>Showing surveys with status: <strong>@ViewBag.CurrentValue</strong></span>
                }
                else if (ViewBag.CurrentFilter == "region")
                {
                    <span>Showing surveys in region: <strong>@ViewBag.CurrentValue</strong></span>
                }
                else if (ViewBag.CurrentFilter == "type")
                {
                    <span>Showing surveys of type: <strong>@ViewBag.CurrentValue</strong></span>
                }
                else if (ViewBag.CurrentFilter == "missed")
                {
                    <span>Showing surveys with <strong>Missed Deadline</strong></span>
                }
            </div>
            <a asp-action="Index" class="btn btn-sm btn-outline-info ms-3">
                <i class="bx bx-x me-1"></i>Clear Filter
            </a>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Key Metrics Row -->
    <div class="row g-4 mb-4">
        <div class="col-12 col-sm-6 col-xl-3">
            <a asp-controller="SurveyCreation" asp-action="Index" class="text-decoration-none">
                <div class="card stat-card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <p class="metric-label mb-2">Total Surveys</p>
                                <h2 class="metric-value text-primary mb-0">@Model.TotalSurveys</h2>
                            </div>
                            <div class="avatar avatar-lg">
                                <div class="avatar-initial rounded-3 bg-label-primary">
                                    <i class="bx bx-layer bx-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <a asp-controller="SurveyCreation" asp-action="Index" asp-route-status="Completed" class="text-decoration-none">
                <div class="card stat-card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <p class="metric-label mb-2">Completed</p>
                                <h2 class="metric-value text-success mb-0">@Model.CompletedSurveys</h2>
                                <small class="text-success fw-semibold">@Model.CompletionRate%</small>
                            </div>
                            <div class="avatar avatar-lg">
                                <div class="avatar-initial rounded-3 bg-label-success">
                                    <i class="bx bx-check-circle bx-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <a asp-controller="SurveyCreation" asp-action="Index" asp-route-status="In Progress" class="text-decoration-none">
                <div class="card stat-card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <p class="metric-label mb-2">In Progress</p>
                                <h2 class="metric-value text-warning mb-0">@Model.InProgressSurveys</h2>
                            </div>
                            <div class="avatar avatar-lg">
                                <div class="avatar-initial rounded-3 bg-label-warning">
                                    <i class="bx bx-time-five bx-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <a asp-controller="SurveyCreation" asp-action="Index" asp-route-status="Pending" class="text-decoration-none">
                <div class="card stat-card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <p class="metric-label mb-2">Pending</p>
                                <h2 class="metric-value text-secondary mb-0">@Model.PendingSurveys</h2>
                            </div>
                            <div class="avatar avatar-lg">
                                <div class="avatar-initial rounded-3 bg-label-secondary">
                                    <i class="bx bx-pause-circle bx-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Additional Metrics Row -->
    <div class="row g-4 mb-4">
        <div class="col-12 col-sm-6 col-xl-4">
            <a asp-controller="SurveyCreation" asp-action="Index" asp-route-status="On Hold" class="text-decoration-none">
                <div class="card stat-card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <p class="metric-label mb-2">On Hold</p>
                                <h2 class="metric-value text-info mb-0">@Model.OnHoldSurveys</h2>
                            </div>
                            <div class="avatar avatar-lg">
                                <div class="avatar-initial rounded-3 bg-label-info">
                                    <i class="bx bx-error-circle bx-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <a asp-controller="SurveyCreation" asp-action="Index" asp-route-status="Assigned" class="text-decoration-none">
                <div class="card stat-card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <p class="metric-label mb-2">Assigned</p>
                                <h2 class="metric-value text-primary mb-0">@Model.AssignedSurveys</h2>
                            </div>
                            <div class="avatar avatar-lg">
                                <div class="avatar-initial rounded-3 bg-label-primary">
                                    <i class="bx bx-user-check bx-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-sm-6 col-xl-3">
            <a asp-controller="SurveyCreation" asp-action="Index" asp-route-missed="true" class="text-decoration-none">
                <div class="card stat-card h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <p class="metric-label mb-2">Missed Deadline</p>
                                <h2 class="metric-value text-danger mb-0">@Model.MissedDeadlineSurveys</h2>
                                <small class="text-danger fw-semibold">
                                    <i class="bx bx-error"></i> Overdue
                                </small>
                            </div>
                            <div class="avatar avatar-lg">
                                <div class="avatar-initial rounded-3 bg-label-danger">
                                    <i class="bx bx-calendar-x bx-lg"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-12 col-sm-12 col-xl-6">
            <div class="card stat-card h-100">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="flex-grow-1">
                            <p class="metric-label mb-2">Completion Rate</p>
                            <h2 class="metric-value text-primary mb-0">@Model.CompletionRate%</h2>
                            <div class="progress mt-2" style="height: 8px;">
                                <div class="progress-bar bg-success" role="progressbar" style="width: @Model.CompletionRate%"></div>
                            </div>
                        </div>
                        <div class="avatar avatar-lg">
                            <div class="avatar-initial rounded-3 bg-label-primary">
                                <i class="bx bx-pie-chart-alt-2 bx-lg"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Status Breakdown & Region Distribution -->
    <div class="row g-4 mb-4">
        <!-- Survey Status Breakdown -->
        <div class="col-md-6 col-xl-4">
            <div class="card h-100">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="card-title mb-0">Survey Status</h5>
                    <div class="dropdown">
                        <button class="btn btn-text-secondary rounded-pill btn-icon dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                            <i class="bx bx-dots-vertical-rounded bx-lg"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" asp-controller="SurveyCreation" asp-action="Index">View All</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    @if (Model.SurveysByStatus.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var status in Model.SurveysByStatus.OrderByDescending(x => x.Value))
                            {
                                var percentage = Model.TotalSurveys > 0 ? (int)Math.Round((double)status.Value / Model.TotalSurveys * 100) : 0;
                                var badgeClass = status.Key switch
                                {
                                    "Completed" => "success",
                                    "In Progress" => "warning",
                                    "Pending" => "secondary",
                                    "On Hold" => "danger",
                                    _ => "dark"
                                };
                                var iconClass = status.Key switch
                                {
                                    "Completed" => "bx-check-circle",
                                    "In Progress" => "bx-time-five",
                                    "Pending" => "bx-pause-circle",
                                    "On Hold" => "bx-error-circle",
                                    _ => "bx-info-circle"
                                };

                                <li class="mb-4">
                                    <a asp-controller="SurveyCreation" asp-action="Index" asp-route-status="@status.Key" class="text-decoration-none text-dark">
                                        <div class="d-flex align-items-center mb-2">
                                            <div class="avatar avatar-sm me-3">
                                                <span class="avatar-initial rounded-2 bg-label-@badgeClass">
                                                    <i class="bx @iconClass"></i>
                                                </span>
                                            </div>
                                            <div class="d-flex w-100 align-items-center justify-content-between">
                                                <span class="fw-semibold">@status.Key</span>
                                                <span class="badge bg-@badgeClass">@status.Value</span>
                                            </div>
                                        </div>
                                        <div class="progress" style="height: 6px;">
                                            <div class="progress-bar bg-@badgeClass" role="progressbar" style="width: @percentage%" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bx bx-info-circle bx-lg text-muted"></i>
                            <p class="text-muted mt-2">No surveys found</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Region Distribution -->
        <div class="col-md-6 col-xl-4">
            <div class="card h-100">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="card-title mb-0">Surveys by Region</h5>
                </div>
                <div class="card-body">
                    @if (Model.SurveysByRegion.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var region in Model.SurveysByRegion.OrderByDescending(x => x.Value).Take(5))
                            {
                                var percentage = Model.TotalSurveys > 0 ? (int)Math.Round((double)region.Value / Model.TotalSurveys * 100) : 0;
                                <li class="mb-4">
                                    <a asp-controller="SurveyCreation" asp-action="Index" asp-route-region="@region.Key" class="text-decoration-none text-dark">
                                        <div class="d-flex align-items-center mb-2">
                                            <div class="avatar avatar-sm me-3">
                                                <span class="avatar-initial rounded-2 bg-label-info">
                                                    <i class="bx bx-map"></i>
                                                </span>
                                            </div>
                                            <div class="d-flex w-100 align-items-center justify-content-between">
                                                <span class="fw-semibold">@region.Key</span>
                                                <span class="text-muted">@region.Value surveys</span>
                                            </div>
                                        </div>
                                        <div class="progress" style="height: 6px;">
                                            <div class="progress-bar bg-info" role="progressbar" style="width: @percentage%" aria-valuenow="@percentage" aria-valuemin="0" aria-valuemax="100"></div>
                                        </div>
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bx bx-map bx-lg text-muted"></i>
                            <p class="text-muted mt-2">No region data available</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Implementation Types -->
        <div class="col-md-12 col-xl-4">
            <div class="card h-100">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="card-title mb-0">Implementation Types</h5>
                </div>
                <div class="card-body">
                    @if (Model.SurveysByImplementationType.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var type in Model.SurveysByImplementationType.OrderByDescending(x => x.Value))
                            {
                                var iconClass = type.Key switch
                                {
                                    "New Project" => "bx-plus-circle",
                                    "Upgradation" => "bx-trending-up",
                                    "Extension" => "bx-expand",
                                    "Restoration" => "bx-refresh",
                                    "AMC" => "bx-wrench",
                                    _ => "bx-cog"
                                };
                                <li class="d-flex align-items-center mb-4">
                                    <a asp-controller="SurveyCreation" asp-action="Index" asp-route-type="@type.Key" class="text-decoration-none text-dark d-flex align-items-center w-100">
                                        <div class="avatar avatar-sm me-3">
                                            <span class="avatar-initial rounded-2 bg-label-primary">
                                                <i class="bx @iconClass"></i>
                                            </span>
                                        </div>
                                        <div class="d-flex w-100 align-items-center justify-content-between">
                                            <span>@type.Key</span>
                                            <span class="badge bg-label-primary">@type.Value</span>
                                        </div>
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bx bx-cog bx-lg text-muted"></i>
                            <p class="text-muted mt-2">No implementation data</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Row -->
    <div class="row g-4 mb-4">
        <!-- Survey Trend Chart -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="card-title mb-1">Survey Trends</h5>
                        <p class="card-subtitle text-muted mb-0">Monthly survey creation and completion</p>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-text-secondary rounded-pill btn-icon dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                            <i class="bx bx-dots-vertical-rounded bx-lg"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li><a class="dropdown-item" href="javascript:void(0);">Last 6 Months</a></li>
                            <li><a class="dropdown-item" href="javascript:void(0);">Last Year</a></li>
                        </ul>
                    </div>
                </div>
                <div class="card-body">
                    <div id="surveyTrendChart"></div>
                </div>
            </div>
        </div>

        <!-- Status Donut Chart -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="card-title mb-0">Status Distribution</h5>
                </div>
                <div class="card-body">
                    <div id="statusDonutChart"></div>
                    <div class="mt-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Overall Progress</span>
                            <span class="fw-semibold">@Model.CompletionRate%</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @Model.CompletionRate%"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Implementation Type & Region Charts -->
    <div class="row g-4 mb-4">
        <!-- Implementation Type Bar Chart -->
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Implementation Type Analysis</h5>
                </div>
                <div class="card-body">
                    <div id="implementationTypeChart"></div>
                </div>
            </div>
        </div>

        <!-- Region Distribution Chart -->
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Regional Distribution</h5>
                </div>
                <div class="card-body">
                    <div id="regionChart"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Surveys & Quick Stats -->
    <div class="row g-4 mb-4">
        <!-- Recent Surveys Table -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <div>
                        <h5 class="card-title mb-0">
                            @if (ViewBag.IsFiltered == true)
                            {
                                <span>Filtered Surveys (@Model.RecentSurveys.Count)</span>
                            }
                            else
                            {
                                <span>Recent Surveys</span>
                            }
                        </h5>
                        @if (ViewBag.IsFiltered == true)
                        {
                            <small class="text-muted">
                                @if (ViewBag.CurrentFilter == "status")
                                {
                                    <span>Status: @ViewBag.CurrentValue</span>
                                }
                                else if (ViewBag.CurrentFilter == "region")
                                {
                                    <span>Region: @ViewBag.CurrentValue</span>
                                }
                                else if (ViewBag.CurrentFilter == "type")
                                {
                                    <span>Type: @ViewBag.CurrentValue</span>
                                }
                                else if (ViewBag.CurrentFilter == "missed")
                                {
                                    <span>Missed Deadline</span>
                                }
                            </small>
                        }
                    </div>
                    @if (Model.CanView)
                    {
                        <a asp-controller="SurveyCreation" asp-action="Index" class="btn btn-sm btn-outline-primary">
                            View All <i class="bx bx-right-arrow-alt"></i>
                        </a>
                    }
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Survey Name</th>
                                    <th>Region</th>
                                    <th>Date</th>
                                    <th>Type</th>
                                    <th>Status</th>
                                    @if (Model.CanUpdate)
                                    {
                                        <th>Actions</th>
                                    }
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.RecentSurveys.Any())
                                {
                                    foreach (var survey in Model.RecentSurveys.Take(8))
                                    {
                                        var statusClass = survey.SurveyStatus switch
                                        {
                                            "Completed" => "bg-success",
                                            "In Progress" => "bg-warning",
                                            "Pending" => "bg-secondary",
                                            "On Hold" => "bg-danger",
                                            _ => "bg-dark"
                                        };
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <i class="bx bx-map-pin me-2 text-primary"></i>
                                                    <span class="fw-semibold">@survey.SurveyName</span>
                                                </div>
                                            </td>
                                            <td>@(survey.RegionName ?? "-")</td>
                                            <td>@(survey.SurveyDate?.ToString("MMM dd, yyyy") ?? "-")</td>
                                            <td>
                                                <small class="text-muted">@(survey.ImplementationType ?? "-")</small>
                                            </td>
                                            <td>
                                                <span class="badge @statusClass status-badge">@survey.SurveyStatus</span>
                                            </td>
                                            @if (Model.CanUpdate)
                                            {
                                                <td>
                                                    <a asp-controller="SurveyCreation" asp-action="Edit" asp-route-id="@survey.SurveyId" class="btn btn-sm btn-text-primary">
                                                        <i class="bx bx-edit"></i>
                                                    </a>
                                                </td>
                                            }
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center py-4 text-muted">
                                            <i class="bx bx-info-circle bx-lg"></i>
                                            <p class="mt-2">No surveys found</p>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Stats & Alerts -->
        <div class="col-lg-4">
            <!-- Performance Summary -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Performance Summary</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Completion Rate</span>
                            <span class="fw-semibold">@Model.CompletionRate%</span>
                        </div>
                        <div class="progress" style="height: 8px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @Model.CompletionRate%" aria-valuenow="@Model.CompletionRate" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>

                    <div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
                        <div class="d-flex align-items-center">
                            <div class="avatar avatar-sm me-2">
                                <span class="avatar-initial rounded bg-label-info">
                                    <i class="bx bx-map-alt"></i>
                                </span>
                            </div>
                            <span>Total Locations</span>
                        </div>
                        <span class="fw-semibold">@Model.TotalLocations</span>
                    </div>

                    <div class="d-flex align-items-center justify-content-between mb-3 pb-3 border-bottom">
                        <div class="d-flex align-items-center">
                            <div class="avatar avatar-sm me-2">
                                <span class="avatar-initial rounded bg-label-success">
                                    <i class="bx bx-check-double"></i>
                                </span>
                            </div>
                            <span>Completed Locations</span>
                        </div>
                        <span class="fw-semibold text-success">@Model.CompletedLocations</span>
                    </div>

                    <div class="d-flex align-items-center justify-content-between">
                        <div class="d-flex align-items-center">
                            <div class="avatar avatar-sm me-2">
                                <span class="avatar-initial rounded bg-label-warning">
                                    <i class="bx bx-time"></i>
                                </span>
                            </div>
                            <span>Pending Locations</span>
                        </div>
                        <span class="fw-semibold text-warning">@Model.PendingLocations</span>
                    </div>
                </div>
            </div>

            <!-- Alerts -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Alerts & Notifications</h5>
                </div>
                <div class="card-body">
                    @if (Model.MissedDeadlineSurveys > 0)
                    {
                        <div class="alert alert-danger d-flex align-items-center mb-3" role="alert">
                            <i class="bx bx-calendar-x bx-lg me-2"></i>
                            <div class="flex-grow-1">
                                <strong>@Model.MissedDeadlineSurveys</strong> survey(s) have missed their deadline
                            </div>
                            <a asp-controller="SurveyCreation" asp-action="Index" asp-route-missed="true" class="btn btn-sm btn-danger">
                                View
                            </a>
                        </div>
                    }

                    @if (Model.OverdueSurveys > 0 && Model.MissedDeadlineSurveys == 0)
                    {
                        <div class="alert alert-danger d-flex align-items-center mb-3" role="alert">
                            <i class="bx bx-error-circle bx-lg me-2"></i>
                            <div class="flex-grow-1">
                                <strong>@Model.OverdueSurveys</strong> survey(s) on hold need attention
                            </div>
                            <a asp-controller="SurveyCreation" asp-action="Index" asp-route-status="On Hold" class="btn btn-sm btn-danger">
                                View
                            </a>
                        </div>
                    }

                    @if (Model.DueSoon > 0)
                    {
                        <div class="alert alert-warning d-flex align-items-center mb-3" role="alert">
                            <i class="bx bx-time-five bx-lg me-2"></i>
                            <div class="flex-grow-1">
                                <strong>@Model.DueSoon</strong> survey(s) currently in progress
                            </div>
                            <a asp-controller="SurveyCreation" asp-action="Index" asp-route-status="In Progress" class="btn btn-sm btn-warning">
                                View
                            </a>
                        </div>
                    }

                    @if (Model.MissedDeadlineSurveys == 0 && Model.OverdueSurveys == 0 && Model.DueSoon == 0)
                    {
                        <div class="alert alert-success d-flex align-items-center" role="alert">
                            <i class="bx bx-check-circle bx-lg me-2"></i>
                            <div>
                                All surveys are on track! 🎉
                            </div>
                        </div>
                    }

                    <div class="mt-3 pt-3 border-top">
                        <div class="d-flex align-items-center justify-content-between mb-2">
                            <span class="text-muted">Active Team Members</span>
                            <span class="badge bg-label-primary">@Model.ActiveTeamMembers</span>
                        </div>
                        <div class="d-flex align-items-center justify-content-between">
                            <span class="text-muted">Total Assignments</span>
                            <span class="badge bg-label-info">@Model.TotalAssignments</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section VendorScripts {
    <script src="~/vendor/libs/apex-charts/apexcharts.js"></script>
}

@section Scripts {
    <script src="~/js/dashboard.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize dashboard with data from model
            DashboardModule.init({
                surveyStatusData: @Html.Raw(Json.Serialize(Model.SurveysByStatus)),
                regionData: @Html.Raw(Json.Serialize(Model.SurveysByRegion)),
                implementationData: @Html.Raw(Json.Serialize(Model.SurveysByImplementationType)),
                monthlyData: @Html.Raw(Json.Serialize(Model.MonthlySurveyCount)),
                monthlyCompletionData: @Html.Raw(Json.Serialize(Model.MonthlyCompletionCount))
            });
        });
    </script>
}

