                            <ul class="dropdown-menu" aria-labelledby="navbardropReports">
                                <li><a class="dropdown-item" asp-controller="Users" asp-action="Index"><i class="bi bi-clipboard-data-fill me-2"></i>Survey</a></li>
                                <li><a class="dropdown-item" asp-controller="UserRights" asp-action="Index"><i class="bi bi-pencil-square me-2"></i>Update Survey</a></li>
                            </ul>
                        </li>
                    </ul>

                    <!-- Right Side Menu -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") != null)
                            {
                                <span class="nav-link">Welcome: <strong>@HttpContextAccessor.HttpContext.Session.GetString("UserName")</strong></span>
                            }
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-dark dropdown-toggle" href="#" id="navbardropSettings"
