@model SurveyApp.Models.SurveyModel
@{
    ViewData["Title"] = "Create Survey";
}

@section PageStyles {
    <style>
        /* Prevent horizontal overflow */
        body {
            overflow-x: hidden !important;
        }
        
        /* Mobile full-screen card */
        @@media (max-width: 767.98px) {
            .full-screen-card {
                min-height: 100vh;
                border-radius: 0 !important;
                margin: 0 !important;
            }
        }
    </style>
}

<form asp-controller="SurveyCreation" asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="container-fluid p-4 m-0">
        <div class="row g-0">
            <div class="col-12">
                <div class="card shadow mt-0 rounded-0 full-screen-card">
                    <div class="card-header bg-purple py-2">
                        <div class="d-flex justify-content-between align-items-center">
                            <h6 class="text-white fs-4 mb-0">
                                Create New Survey
                            </h6>
                            <a href="javascript:void(0);"
                               class="btn btn-outline-danger text-white border-0"
                               onclick="showBackConfirmModal('@Url.Action("Index", "SurveyCreation")','Unsaved changes will be lost. Do you want to continue?')">
                                <i class="bi bi-arrow-left-circle"></i>
                                <span class="d-none d-md-inline ms-2">Back To List</span>
                            </a>
                        </div>
                    </div>
                    <div class="card-body p-3 p-md-4">
                        <div class="row gx-4 gy-6">
                            <div class="col-12">
                                @if (TempData["ResultMessage"] != null && !string.IsNullOrWhiteSpace(TempData["ResultMessage"]?.ToString()))
                                {
                                    <div class="alert alert-@TempData["ResultType"] alert-dismissible fade show" role="alert">
                                        @Html.Raw(TempData["ResultMessage"])
                                        <button type="button" class="btn-close btn-sm align-top" data-bs-dismiss="alert" aria-label="Close"></button>
                                    </div>
                                }
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="SurveyName" type="text" class="form-control" placeholder=" " required>
                                    <label asp-for="SurveyName"></label>
                                    <span asp-validation-for="SurveyName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <select asp-for="RegionID" asp-items="@(ViewBag.Regions as SelectList)" class="form-select" placeholder=" ">
                                        <option value=""> </option>
                                    </select>
                                    <label asp-for="RegionID"></label>
                                    <span asp-validation-for="RegionID" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <select asp-for="ImplementationType" asp-items="Model.ImplementationTypeOptions" class="form-select" placeholder=" ">
                                        <option value=""> </option>
                                    </select>
                                    <label asp-for="ImplementationType"></label>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="SurveyDate" type="date" class="form-control" placeholder=" ">
                                    <label asp-for="SurveyDate"></label>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="SurveyTeamName" type="text" class="form-control" placeholder=" ">
                                    <label asp-for="SurveyTeamName"></label>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="SurveyTeamContact" type="text" class="form-control" placeholder=" " maxlength="15">
                                    <label asp-for="SurveyTeamContact"></label>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="AgencyName" type="text" class="form-control" placeholder=" ">
                                    <label>Client Name</label>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <select asp-for="StateId" id="stateDropdown" class="form-select" placeholder=" ">
                                        <option value=""> </option>
                                    </select>
                                    <label asp-for="StateId"></label>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <select asp-for="CityId" id="cityDropdown" class="form-select" placeholder=" " disabled>
                                        <option value=""> </option>
                                    </select>
                                    <label asp-for="CityId"></label>
                                </div>
                            </div>

                            <!-- Hidden fields to store state and city names -->
                            <input type="hidden" asp-for="MapMarking" id="stateNameHidden" />
                            <input type="hidden" asp-for="CityDistrict" id="cityNameHidden" />

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="LocationSiteName" type="text" class="form-control" placeholder=" ">
                                    <label asp-for="LocationSiteName"></label>
                                </div>
                            </div>


                            <div class="col-12">
                                <div class="form-custom-floating">
                                    <textarea asp-for="ScopeOfWork" class="form-control" placeholder=" " rows="3" style="min-height: 100px;"></textarea>
                                    <label asp-for="ScopeOfWork"></label>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="Latitude" type="number" step="any" class="form-control" placeholder=" ">
                                    <label asp-for="Latitude"></label>
                                </div>
                            </div>

                            <div class="col-12 col-md-6">
                                <div class="form-custom-floating">
                                    <input asp-for="Longitude" type="number" step="any" class="form-control" placeholder=" ">
                                    <label asp-for="Longitude"></label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer mt-4">
                        <div class="d-flex flex-column flex-sm-row gap-2 justify-content-end">
                            <button type="submit" class="btn btn-success order-1 order-sm-0">
                                <i class="bi bi-plus-circle me-2"></i> Create Survey
                            </button>
                            <a asp-controller="SurveyCreation" asp-action="Index" class="btn btn-secondary order-2 order-sm-1">
                                <i class="bi bi-x-circle me-2"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Load states on page load
            loadStates();
        });

        function loadStates() {
            $.ajax({
                url: '@Url.Content("~/api/Location/states")',
                type: 'GET',
                success: function(states) {
                    var stateDropdown = $('#stateDropdown');
                    stateDropdown.empty();
                    stateDropdown.append('<option value="">--Select State--</option>');
                    
                    $.each(states, function(index, state) {
                        stateDropdown.append($('<option></option>').val(state.id).text(state.name));
                    });
                },
                error: function(xhr, status, error) {
                    console.error('Error loading states:', error);
                    console.error('XHR:', xhr);
                    alert('Failed to load states. Please refresh the page.');
                }
            });
        }

        // When state changes, load cities
        $('#stateDropdown').change(function() {
            var stateId = $(this).val();
            var stateName = $('#stateDropdown option:selected').text();
            var cityDropdown = $('#cityDropdown');
            
            // Update hidden field with state name
            $('#stateNameHidden').val(stateName !== '--Select State--' ? stateName : '');
            
            if (stateId) {
                cityDropdown.prop('disabled', true);
                cityDropdown.empty();
                cityDropdown.append('<option value="">Loading cities...</option>');
                
                $.ajax({
                    url: '@Url.Content("~/api/Location/cities/")' + stateId,
                    type: 'GET',
                    success: function(cities) {
                        cityDropdown.empty();
                        cityDropdown.append('<option value="">--Select City--</option>');
                        
                        $.each(cities, function(index, city) {
                            cityDropdown.append($('<option></option>').val(city.id).text(city.name));
                        });
                        
                        cityDropdown.prop('disabled', false);
                    },
                    error: function(xhr, status, error) {
                        console.error('Error loading cities:', error);
                        console.error('XHR:', xhr);
                        cityDropdown.empty();
                        cityDropdown.append('<option value="">Error loading cities</option>');
                    }
                });
            } else {
                cityDropdown.empty();
                cityDropdown.append('<option value="">--Select City--</option>');
                cityDropdown.prop('disabled', true);
                $('#cityNameHidden').val('');
            }
        });

        // When city changes, update hidden field
        $('#cityDropdown').change(function() {
            var cityName = $('#cityDropdown option:selected').text();
            $('#cityNameHidden').val(cityName !== '--Select City--' ? cityName : '');
        });

        function showBackConfirmModal(url, message) {
            let modal = document.getElementById("backConfirmModal");

            if (message) {
                modal.querySelector(".modal-body").innerText = message;
            }

            // set URL on continue button
            document.getElementById("confirmContinueBtn").setAttribute("href", url);

            // show modal
            var myModal = new bootstrap.Modal(modal, {
                backdrop: 'static',
                keyboard: false
            });
            myModal.show();
        }
    </script>
}
