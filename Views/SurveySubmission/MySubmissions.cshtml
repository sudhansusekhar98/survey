@model List<SurveyApp.Models.SurveySubmissionModel>
@{
    ViewData["Title"] = "My Survey Submissions";
}

@section VendorStyles {
    <link rel="stylesheet" href="~/vendor/datatables/datatables.min.css" />
}

@section PageStyles {
    <style>
        .status-badge {
            padding: 0.35rem 0.65rem;
            font-size: 0.75rem;
            font-weight: 600;
        }
        .status-draft {
            background-color: #6c757d;
            color: #fff;
        }
        .status-submitted {
            background-color: #ffc107;
            color: #000;
        }
        .status-approved {
            background-color: #28a745;
            color: #fff;
        }
        .status-rejected {
            background-color: #dc3545;
            color: #fff;
        }
        .timeline-item {
            position: relative;
            padding-left: 40px;
            padding-bottom: 20px;
        }
        .timeline-item::before {
            content: '';
            position: absolute;
            left: 12px;
            top: 8px;
            bottom: -12px;
            width: 2px;
            background: #dee2e6;
        }
        .timeline-item:last-child::before {
            display: none;
        }
        .timeline-icon {
            position: absolute;
            left: 0;
            top: 0;
            width: 28px;
            height: 28px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 14px;
        }
    </style>
}

<div class="container-fluid p-0 m-0">
    <div class="row g-0">
        <div class="col-12">
            <div class="card shadow mt-0 rounded-0">
                <div class="card-header bg-purple py-2 mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="text-white fs-4 mb-0">
                            <i class="bi bi-file-earmark-text"></i> My Survey Submissions
                        </h6>
                        <div>
                            <a asp-controller="SurveySubmission" asp-action="Index" 
                               class="btn btn-outline-light btn-sm">
                                <i class="bi bi-clipboard-check"></i> Pending Reviews
                            </a>
                            <a asp-controller="Dashboard" asp-action="Index" 
                               class="btn btn-outline-light btn-sm">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["ResultMessage"] != null && !string.IsNullOrWhiteSpace(TempData["ResultMessage"]?.ToString()))
                    {
                        @Html.Raw(TempData["ResultMessage"])
                    }

                    @if (Model != null && Model.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered datatables-basic">
                                <thead class="table-light">
                                    <tr>
                                        <th>Survey Name</th>
                                        <th>Submission Date</th>
                                        <th>Status</th>
                                        <th>Reviewed By</th>
                                        <th>Review Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var submission in Model)
                                    {
                                        var statusClass = submission.SubmissionStatus?.ToLower() switch
                                        {
                                            "submitted" => "status-submitted",
                                            "approved" => "status-approved",
                                            "rejected" => "status-rejected",
                                            _ => "status-draft"
                                        };

                                        var statusIcon = submission.SubmissionStatus?.ToLower() switch
                                        {
                                            "submitted" => "hourglass-split",
                                            "approved" => "check-circle",
                                            "rejected" => "x-circle",
                                            _ => "file-earmark"
                                        };

                                        <tr>
                                            <td>
                                                <strong>@submission.SurveyName</strong><br />
                                                <small class="text-muted">ID: @submission.SurveyId</small>
                                            </td>
                                            <td>@submission.SubmissionDate?.ToString("dd-MMM-yyyy hh:mm tt")</td>
                                            <td>
                                                <span class="badge status-badge @statusClass">
                                                    <i class="bi bi-@statusIcon"></i> @submission.SubmissionStatus
                                                </span>
                                            </td>
                                            <td>@(submission.ReviewedByName ?? "-")</td>
                                            <td>@(submission.ReviewDate?.ToString("dd-MMM-yyyy hh:mm tt") ?? "-")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-controller="SurveyReports" 
                                                       asp-action="DetailedReport" 
                                                       asp-route-surveyId="@submission.SurveyId"
                                                       class="btn btn-sm btn-info text-white"
                                                       title="View Report">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    @if (!string.IsNullOrEmpty(submission.ReviewComments))
                                                    {
                                                        <button type="button" 
                                                                class="btn btn-sm btn-warning"
                                                                onclick="showCommentsModal('@submission.SurveyName', '@submission.SubmissionStatus', '@Html.Raw(submission.ReviewComments?.Replace("'", "\\'").Replace("\n", "<br/>"))')"
                                                                title="View Comments">
                                                            <i class="bi bi-chat-left-text"></i>
                                                        </button>
                                                    }
                                                    @if (submission.SubmissionStatus == "Rejected" && !submission.IsLockedForEditing)
                                                    {
                                                        <a asp-controller="SurveyCreation" 
                                                           asp-action="SurveyLocation" 
                                                           asp-route-surveyId="@submission.SurveyId"
                                                           class="btn btn-sm btn-primary"
                                                           title="Edit Survey">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="bi bi-inbox fs-1 d-block mb-3"></i>
                            <h5>No Submissions Yet</h5>
                            <p class="mb-0">You haven't submitted any surveys for review.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Comments Modal -->
<div class="modal fade" id="commentsModal" tabindex="-1" aria-labelledby="commentsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header" id="commentsModalHeader">
                <h5 class="modal-title" id="commentsModalLabel">
                    <i class="bi bi-chat-left-text"></i> Review Comments
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6 id="commentsSurveyName" class="mb-3"></h6>
                <div class="timeline-item">
                    <div class="timeline-icon bg-primary text-white">
                        <i class="bi bi-chat"></i>
                    </div>
                    <div id="commentsContent" class="card">
                        <div class="card-body">
                            <p id="commentsText" class="mb-0"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section VendorScripts {
    <script src="~/vendor/datatables/datatables.min.js"></script>
}

@section PageScripts {
    <script>
        $(document).ready(function () {
            $('.datatables-basic').DataTable({
                order: [[1, 'desc']], // Sort by submission date descending
                pageLength: 25
            });
        });

        function showCommentsModal(surveyName, status, comments) {
            $('#commentsSurveyName').text(surveyName);
            $('#commentsText').html(comments);
            
            var headerClass = 'bg-primary';
            if (status === 'Approved') {
                headerClass = 'bg-success';
            } else if (status === 'Rejected') {
                headerClass = 'bg-danger';
            }
            
            $('#commentsModalHeader').removeClass('bg-primary bg-success bg-danger').addClass(headerClass + ' text-white');
            $('#commentsModal').modal('show');
        }
    </script>
}
