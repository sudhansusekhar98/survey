@model List<SurveyApp.Models.SurveySubmissionModel>
@{
    ViewData["Title"] = "Survey Submissions - Pending Review";
}

@section VendorStyles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/datatables.min.css" />
}

@section PageStyles {
    <style>
        .status-badge {
            padding: 0.35rem 0.65rem;
            font-size: 0.75rem;
            font-weight: 600;
        }
        .status-draft {
            background-color: #6c757d;
            color: #fff;
        }
        .status-submitted {
            background-color: #ffc107;
            color: #000;
        }
        .status-approved {
            background-color: #28a745;
            color: #fff;
        }
        .status-rejected {
            background-color: #dc3545;
            color: #fff;
        }
    </style>
}

<div class="container-fluid p-0 m-0">
    <div class="row g-0">
        <div class="col-12">
            <div class="card shadow mt-0 rounded-0">
                <div class="card-header bg-purple py-2 mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h6 class="text-white fs-4 mb-0">
                            <i class="bi bi-clipboard-check"></i> Pending Survey Submissions
                        </h6>
                        <div>
                            <a asp-controller="SurveySubmission" asp-action="MySubmissions" 
                               class="btn btn-outline-light btn-sm">
                                <i class="bi bi-list-check"></i> My Submissions
                            </a>
                            <a asp-controller="Dashboard" asp-action="Index" 
                               class="btn btn-outline-light btn-sm">
                                <i class="bi bi-speedometer2"></i> Dashboard
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["ResultMessage"] != null && !string.IsNullOrWhiteSpace(TempData["ResultMessage"]?.ToString()))
                    {
                        @Html.Raw(TempData["ResultMessage"])
                    }

                    @if (Model != null && Model.Count > 0)
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered datatables-basic">
                                <thead class="table-light">
                                    <tr>
                                        <th>Survey Name</th>
                                        <th>Submitted By</th>
                                        <th>Submission Date</th>
                                        <th>Status</th>
                                        <th>Reviewed By</th>
                                        <th>Review Date</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var submission in Model)
                                    {
                                        var statusClass = submission.SubmissionStatus?.ToLower() switch
                                        {
                                            "submitted" => "status-submitted",
                                            "approved" => "status-approved",
                                            "rejected" => "status-rejected",
                                            _ => "status-draft"
                                        };

                                        var statusIcon = submission.SubmissionStatus?.ToLower() switch
                                        {
                                            "submitted" => "hourglass-split",
                                            "approved" => "check-circle",
                                            "rejected" => "x-circle",
                                            _ => "file-earmark"
                                        };

                                        <tr>
                                            <td>
                                                <strong>@submission.SurveyName</strong><br />
                                                <small class="text-muted">ID: @submission.SurveyId</small>
                                            </td>
                                            <td>@submission.SubmittedByName</td>
                                            <td>@submission.SubmissionDate?.ToString("dd-MMM-yyyy hh:mm tt")</td>
                                            <td>
                                                <span class="badge status-badge @statusClass">
                                                    <i class="bi bi-@statusIcon"></i> @submission.SubmissionStatus
                                                </span>
                                            </td>
                                            <td>@(submission.ReviewedByName ?? "-")</td>
                                            <td>@(submission.ReviewDate?.ToString("dd-MMM-yyyy hh:mm tt") ?? "-")</td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-controller="SurveyReports" 
                                                       asp-action="DetailedReport" 
                                                       asp-route-surveyId="@submission.SurveyId"
                                                       class="btn btn-sm btn-info text-white"
                                                       title="View Report">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    <button type="button" 
                                                            class="btn btn-sm btn-success"
                                                            onclick="showApproveModal(@submission.SubmissionId, '@submission.SurveyName')"
                                                            title="Approve">
                                                        <i class="bi bi-check-circle"></i>
                                                    </button>
                                                    <button type="button" 
                                                            class="btn btn-sm btn-danger"
                                                            onclick="showRejectModal(@submission.SubmissionId, '@submission.SurveyName')"
                                                            title="Reject">
                                                        <i class="bi bi-x-circle"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info text-center">
                            <i class="bi bi-info-circle fs-1 d-block mb-3"></i>
                            <h5>No Pending Submissions</h5>
                            <p class="mb-0">There are no surveys pending your review at this time.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Approve Modal -->
<div class="modal fade" id="approveModal" tabindex="-1" aria-labelledby="approveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Approve" method="post">
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title" id="approveModalLabel">
                        <i class="bi bi-check-circle"></i> Approve Survey
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="submissionId" id="approveSubmissionId" />
                    <p>Are you sure you want to approve the survey <strong id="approveSurveyName"></strong>?</p>
                    <div class="mb-3">
                        <label for="approveComments" class="form-label">Comments (Optional)</label>
                        <textarea class="form-control" id="approveComments" name="reviewComments" 
                                  rows="3" placeholder="Enter any feedback or comments..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Approve
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reject Modal -->
<div class="modal fade" id="rejectModal" tabindex="-1" aria-labelledby="rejectModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="Reject" method="post" id="rejectForm">
                <div class="modal-header bg-danger text-white">
                    <h5 class="modal-title" id="rejectModalLabel">
                        <i class="bi bi-x-circle"></i> Reject Survey
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="submissionId" id="rejectSubmissionId" />
                    <p>You are rejecting the survey <strong id="rejectSurveyName"></strong>.</p>
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Note:</strong> The survey will be unlocked and the submitter will be notified to make corrections.
                    </div>
                    <div class="mb-3">
                        <label for="rejectionReason" class="form-label">
                            Rejection Reason <span class="text-danger">*</span>
                        </label>
                        <textarea class="form-control" id="rejectionReason" name="rejectionReason" 
                                  rows="4" required 
                                  placeholder="Please provide detailed reason for rejection..."></textarea>
                        <div class="invalid-feedback">
                            Rejection reason is required.
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-x-circle"></i> Reject
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section VendorScripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/vendor/datatables/datatables.min.js"></script>
}

@section PageScripts {
    <script>
        $(document).ready(function () {
            $('.datatables-basic').DataTable({
                order: [[2, 'desc']], // Sort by submission date descending
                pageLength: 25
            });
        });

        function showApproveModal(submissionId, surveyName) {
            $('#approveSubmissionId').val(submissionId);
            $('#approveSurveyName').text(surveyName);
            $('#approveComments').val('');
            $('#approveModal').modal('show');
        }

        function showRejectModal(submissionId, surveyName) {
            $('#rejectSubmissionId').val(submissionId);
            $('#rejectSurveyName').text(surveyName);
            $('#rejectionReason').val('');
            $('#rejectModal').modal('show');
        }

        // Form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}
