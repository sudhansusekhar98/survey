@* ************** Content ************** *@

<div class="centering-wrapper">
    
    <div class="modern-login-card">
        <div class="login-left">
            <div class="logo-container">
                <a href="https://www.vlaccess.com/" target="_blank">
                    <img src="~/img/icons/vlaccess_logo.png" alt="VL Access Logo">
                </a>
            </div>

            <div class="login-header">
                <h1 class="login-title">Hello!</h1>
                <p class="login-subtitle">Sign in to your account</p>
            </div>

            <div id="pwa-install-banner" class="alert alert-info d-flex align-items-center mb-4" style="display: none !important;">
                <i class="bi bi-download me-3 fs-5"></i>
                @* <div class="flex-grow-1 text-start">
                    <strong>Install App</strong>
                </div> *@
                @* <button id="pwa-install-btn" class="btn btn-sm btn-primary px-3">Install</button> *@
            </div>

            <form asp-controller="UserLogin" asp-action="Index" method="post">
                @Html.AntiForgeryToken()

                <div class="modern-input-group">
                    <i class="bi bi-envelope-fill input-icon"></i>
                    <input asp-for="LoginId" type="text" class="modern-input" placeholder="E-mail" required>
                </div>

                <div class="modern-input-group">
                    <i class="bi bi-lock-fill input-icon"></i>
                    <input asp-for="LoginPassword" type="password" class="modern-input" id="password-field" placeholder="Password" required>
                    <i class="bi bi-eye-slash password-toggle" id="password-toggle"></i>
                </div>

                @if (TempData["LoginMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show small py-2" role="alert">
                        @Html.Raw(TempData["LoginMessage"])
                        <button type="button" class="btn-close small" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["LoginFailed"] != null)
                {
                    <div class="alert alert-danger d-flex align-items-center mb-2 py-2 small" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        <div>@Html.Raw(TempData["LoginFailed"])</div>
                    </div>
                }

                <div class="actions-row">
                    <div class="modern-checkbox">
                        <input type="checkbox" id="remember-me">
                        <label for="remember-me" style="cursor: pointer;">Remember me</label>
                    </div>
                    <a href="javascript:void(0)" class="forgot-password">Forgot password?</a>
                </div>

                <button class="modern-btn" type="submit">SIGN IN</button>

                @* <div class="create-account">
                    Don't have an account? <a href="javascript:void(0)">Create</a>
                </div> *@
            </form>
        </div>

        <div class="login-right margin-left-3 padding-left-4">
            <div class="cloud-separator-desktop"></div>
            <div class="login-right-content">
                <h2 class="welcome-title text-white">Welcome Back!</h2>
                <p class="welcome-text">
                    Access your infrastructure survey dashboard to manage locations, track device installations, 
                    and monitor survey progress.
                </p>
            </div>
        </div>
    </div>

</div> 
@section Scripts {
    <script src="~/pwa-install.js"></script>
    <script>
        document.getElementById('password-toggle').addEventListener('click', function() {
            const passwordField = document.getElementById('password-field');
            const icon = this;
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            } else {
                passwordField.type = 'password';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            }
        });

        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/service-worker.js')
                    .then(registration => console.log('Service Worker registered:', registration.scope))
                    .catch(err => console.log('Service Worker registration failed:', err));
            });
        }
    </script>
}